                  aria-disabled="true" {% endif %} class="slider-btn button theme_buttons">{{ section.settings.second_banner_btn }}</a>
                </div>
            </div>
          </div>
      </div>
      <div class="gudget-new-inner-right">
          <div class="gudget-last-banner-content">
            {% if section.settings.third_banner_img != blank %}
              <div class="media media--transparent ratio w-100" style="--ratio-percent: 125.27%">
                <img src="{{ section.settings.third_banner_img | img_url: 'master' }}" alt="slider-img" class="w-100" loading="eager">
              </div>
              {% else %}
              <div class="media media--transparent ratio w-100" style="--ratio-percent: 125.27%">
                {{ 'collection-3' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
              </div>
              {% endif %}
              <div class="ttbanner-content banner1-text--{{ section.settings.banner3_text_alignment }} banner1-block--{{ section.settings.banner3_text_block_alignment }}">
                  <div class="ttbaaner-subtitle theme_main_subheading">{{ section.settings.third_banner_subheading }}</div>
