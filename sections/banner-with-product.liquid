<div class="isolate section-{{ section.id }}-padding banner-product-{{ section.id }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} swatch-{{ section.id }}">
  <div class="banner-with-product collection section-{{ section.id }}-padding-inner">
    <div class="{{ section.settings.section_width }}">
      {% if section.settings.heading-img != blank or section.settings.collections_subtitle != blank or section.settings.collections_title != blank or section.settings.collections_description != blank %}
        <div class="collection_product_title title_bottom_margin">
          {% if section.settings.heading-img != blank %}
            <div class="heading-img w-100 {{ section.settings.main_title_alignment }}">
              <img src="{{ section.settings.heading-img | img_url: 'master' }}" alt="slider-img" class="w-100" loading="eager">
            </div>
          {% endif %}
          {%- if section.settings.collections_subtitle != blank -%}
            <div class="theme_main_subheading">{{ section.settings.collections_subtitle }}</div>
          {% endif %}
          {%- if section.settings.collections_title != blank -%}
            <div class="theme_main_heading h2">{{ section.settings.collections_title }}</div>
          {%- endif -%}
          {%- if section.settings.collections_description != blank -%}
            <div class="theme_main_description">{{ section.settings.collections_description }}</div>
          {% endif %}
        </div>
      {% endif %}
      <div class="banner-product-collections-wrapper">
          <div class="banner-with-product-row banner-position--{{ section.settings.banner_position }}">
            <div class="product-banner">
              <div class="category-collection-banner">
                 <a {% if section.settings.btn_url %} href="{{ section.settings.btn_url }}" {% else %} role="link" aria-disabled="true" {% endif %}>
                    <div class="banner-hover-img">
                      {% if section.settings.banner_img != blank %}
                      <div class="media media--transparent ratio" style="--ratio-percent: 142.310%">
                        {{ section.settings.banner_img | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                      </div>
                      {% else %}
                      <div class="media media--transparent ratio" style="--ratio-percent: 142.310%">
                        {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                      </div>
                      {% endif %}
                    </div>
                    <div class="product-banner-text product-banner-text--{{ section.settings.text_alignment }} product-banner-block--{{ section.settings.text_block_alignment }}">
                      {% if section.settings.banner_subheading != blank %}
                        <div class="banner-{{ section.id }} theme_main_subheading">{{ section.settings.banner_subheading }}</div>
                      {% endif %}
                      {% if section.settings.banner_heading != blank %}
                        <div class="banner-{{ section.id }} theme_main_heading h2">{{ section.settings.banner_heading }}</div>
                      {% endif %}
                      <div class="button theme_buttons" aria-label="{{ section.settings.btn-text }}">{{ section.settings.btn-text }}</div>
                    </div>
                  </a>
              </div>
            </div>
            <div class="banner-product-collections">
              <slider-component>
                <ul
                  id="Slider-{{ section.id }}"
                  class="product-grid contains-card contains-card--product
                  {% if settings.card_style == 'standard' %} contains-card--standard{% endif %} 
                  grid"
                  role="list"
                  aria-label="{{ 'general.slider.name' | t }}"
                >
                  {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
                    <li
                      id="Slide-{{ section.id }}-{{ forloop.index }}" 
                      class="grid__item"
                    >
                      {% render 'card-product',
                        card_product: product,
                        media_aspect_ratio: settings.p_image_ratio,
                        image_shape: settings.p_image_shape,
                        show_secondary_image: settings.p_show_secondary_image,
                        show_vendor: settings.p_show_vendor,
                        show_badge: settings.show_badge,
                        show_countdown: settings.p_show_countdown,
                        show_rating: settings.p_show_rating,
                        show_quick_add: settings.p_enable_quick_add,
                        quantity_enable: settings.p_quantity_enable,
                        enable_product_variants: settings.p_variants_enable,
                        section_id: section.id
                      %}
                    </li>
                  {%- else -%}
                    {%- for i in (1..4) -%}
                      <li
                        class="grid__item"
                      >
                        {%- assign placeholder_image = 'product-' | append: forloop.rindex -%}
                        {% render 'card-product',
                          show_vendor: settings.p_show_vendor,
                          placeholder_image: placeholder_image
                        %}
                      </li>
                    {%- endfor -%}
                  {%- endfor -%}
                </ul>
              </slider-component>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>


