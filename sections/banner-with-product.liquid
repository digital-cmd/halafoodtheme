    text-align: {{ section.settings.main_title_alignment }};
  }
  .banner-product-{{ section.id }} .banner-with-product .theme_main_subheading{
    color: {{ section.settings.subheading_color }};
  }
  .banner-product-{{ section.id }} .banner-with-product .theme_main_heading{
    color: {{ section.settings.heading_color }};
  }
  .banner-product-{{ section.id }} .banner-with-product .theme_main_description{
    color: {{ section.settings.content_color }};
  }
  .banner-product-{{ section.id }} .banner-with-product .product-card-wrapper .product_vendor {
    color: {{ settings.card_product_vendor_color }};
  }
  .banner-product-{{ section.id }} .banner-with-product .product-card-wrapper .card__heading a, .product_tile_size_holder, .swatch-anchor{
    color: {{ settings.card_product_title_color }};
  }
