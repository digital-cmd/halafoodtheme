    background-color: {{ settings.card_button_hr_bg }};
    color: {{ settings.card_button_hr_text }};
  }
  .banner-product-{{ section.id }} .banner-with-product .product-hover .active .icon.icon-wishlist,
  .banner-product-{{ section.id }} .banner-with-product .product-hover .active .icon.icon-compare{
    fill: {{ settings.card_button_text }};
    color: {{ settings.card_button_text }};
  }
  .banner-product-{{ section.id }} .banner-with-product .product-hover button:hover.active .icon.icon-wishlist,
  .banner-product-{{ section.id }} .banner-with-product .product-hover button:hover.active .icon.icon-compare{
