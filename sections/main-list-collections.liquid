    },
    {
      "type": "color",
      "id": "collection_button_icon_color",
      "label": "t:sections.social_media_collage.settings.icon_color",
      "default": "#131313"
    },
    {
      "type": "color",
      "id": "collection_button_hover_bg_color",
      "label": "t:sections.social_media_collage.settings.button_hr_bg",
      "default": "#131313"
    },
    {
      "type": "color",
      "id": "collection_button_hover_icon_color",
      "label": "t:sections.social_media_collage.settings.icon_hover_color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "number",
      "id": "padding-top",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "number",
      "id": "padding-bottom",
      "label": "Padding bottom",
      "default": 60
    },
    {
      "type": "header",
      "content": "Screen wise section padding"
    },
    {
      "type": "header",
      "content": "@media screen 1429"
    },
    {
      "type": "number",
      "id": "padding-top-1429",
