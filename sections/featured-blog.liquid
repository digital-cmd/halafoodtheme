{%- style -%}
  .blog .swiper-button-next,
  .blog .swiper-button-prev{
    background: {{ settings.button_bg }}; 
    color: {{ settings.button_text }};
  }
  .blog .swiper-button-next:hover,
  .blog .swiper-button-prev:hover{
    background: {{ settings.button_hr_bg }}; 
    color: {{ settings.button_hr_text }};
  }
  .blog .swiper-pagination-bullet { 
    background: {{ settings.theme_dots }}; 
  }  
  .blog .swiper-pagination-bullet.swiper-pagination-bullet-active { 
    background: {{ settings.theme_dots_active }};
  }
  .blog .blog_post_title_main_wrapper{
    text-align: {{ section.settings.main_title_alignment }}
  }
  .blog .blog_subheading{
    color: {{ section.settings.subheading_color }};
  }
  .blog .blog__title{
    color: {{ section.settings.heading_color }};
  }
  .blog .blog_description{
    color: {{ section.settings.content_color }};
  }
  .blog .blog__view-all .blog__button{
    background-color: {{ settings.button_bg }};
    color: {{ settings.button_text }};
  }
  .blog .blog__view-all .blog__button:hover{
    background-color: {{ settings.button_hr_bg }};
    color: {{ settings.button_hr_text }};
  }
  .blog .article-card__info .calender_icon,
  .blog .article-card__info .circle-divider{
    color: {{ settings.card_date_color }};
  }
  .blog .article-card__info .article_author{
    color: {{ settings.card_author_name_color }}
  }
  .blog .card__information .card__heading a{
    color: {{ settings.card_heading_color }};
  }
  .blog .card__information .card__heading a:hover{
    color: {{ settings.card_hr_heading_color }};
  }
  .blog .card__information .article-card__excerpt{
    color: {{ settings.card_content_color }};
  }
  .blog .card__information .blog_card_button{
    color: {{ settings.card_button_color }};
    border-bottom: 1px solid {{ settings.card_button_color }};
  }
  .blog .card__information .blog_card_button:hover{
    color: {{ settings.card_button_hr_color }};
    border-bottom: 1px solid {{ settings.card_button_hr_color }};
  }
  .blog .heading-img.center{
    margin: 0 auto;
  }
  .blog .heading-img.right{
    margin: 0 0 0 auto;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    margin-top: {{ section.settings.margin-top }}px;
    margin-bottom: {{ section.settings.margin-bottom }}px;
    background-color: {{ section.settings.bg_color }};
  }
  @media screen and (max-width: 1429px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1429 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1429 }}px;
      margin-top: {{ section.settings.margin-top-1429 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1429 }}px;
    }
  }
  @media screen and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1199 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1199 }}px;
      margin-top: {{ section.settings.margin-top-1199 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1199 }}px;
    }
  }
  @media screen and (max-width: 991px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-991 }}px;
      padding-bottom: {{ section.settings.padding-bottom-991 }}px;
      margin-top: {{ section.settings.margin-top-991 }}px;
      margin-bottom: {{ section.settings.margin-bottom-991 }}px;
    }
  }
  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-767 }}px;
      padding-bottom: {{ section.settings.padding-bottom-767 }}px;
