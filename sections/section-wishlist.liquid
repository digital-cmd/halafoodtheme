<link rel="stylesheet" href="{{ 'quick-add.css' | asset_url }}" media="print" onload="this.media='all'">
<script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

{{ 'component-card.css' | asset_url | stylesheet_tag }}
<div class="main-wishlist-page section-{{ section.id }}-padding grid page-width" grid-wishlist></div>
<div class="wishlist-empty page-width">
  <div class="title-wrapper center">
    <div class="title title--primary h2">
      {{ 'sections.collection_template.empty' | t -}}
    </div>
  </div>
</div>

{% style %}
.wishlist-empty{
  color: {{ settings.page_title_text_color }};
}
.main-wishlist-page .theme_main_heading {
  color: {{ settings.theme_heading_color }};
}
.wishlist-card-wrapper:has(a .card.card--card){
  background-color: {{ settings.product_card_main_color }};
}
.wishlist-card-wrapper .card__information{
  text-align: {{ settings.card_text_alignment }};
}
.wishlist-card-wrapper .card__information .quantity.center{
  margin: 10px auto 0 auto;
}
.wishlist-card-wrapper .card__information .quantity.right{
  margin: 10px 0 0 auto;
}
.wishlist-card-wrapper .quantity:after{
  border: 1px solid {{ settings.q_button_border }};
}
.wishlist-card-wrapper .quantity__input{
  color: {{ settings.q_button_color }};
}
.wishlist-card-wrapper .quantity__button{
  background-color: {{ settings.q_button_bg }} !important;
  color: {{ settings.q_button_color }};
}
.wishlist-card-wrapper .quantity__button:hover{
  background-color: {{ settings.q_button_hr_bg }} !important;
  color: {{ settings.q_button_hr_color }};
}
.wishlist-card-wrapper .collection__title {
  text-align: {{ section.settings.main_title_alignment }};
}
.wishlist-card-wrapper .product-hover button,
.wishlist-card-wrapper .quick-add__submit{
  background-color: {{ settings.button_bg }};
  color: {{ settings.button_text }};
}
.wishlist-card-wrapper .product-hover button:hover,
.wishlist-card-wrapper .quick-add__submit:hover{
  background-color: {{ settings.button_hr_bg }};
  color: {{ settings.button_hr_text }};
}
.wishlist-card-wrapper .product_vendor {
  color: {{ settings.card_product_vendor_color }};
}
.wishlist-card-wrapper .card__heading a, .product_tile_size_holder, .swatch-anchor{
  color: {{ settings.card_product_title_color }};
}
.wishlist-card-wrapper .card__heading a:hover{
  color: {{ settings.card_product_title_hr_color }};
}
.wishlist-card-wrapper .price--on-sale .price-item--regular {
  color: {{ settings.card_product_sale_price_color }};
}
.wishlist-card-wrapper .price--on-sale .price-item--last {
  color: {{ settings.card_product_regular_price_color }};
}
.wishlist-card-wrapper .product-hover .active .icon.icon-wishlist,
.wishlist-card-wrapper .product-hover .active .icon.icon-compare{
  fill: {{ settings.card_button_text }};
  color: {{ settings.card_button_text }};
}
.wishlist-card-wrapper .product-hover button:hover.active .icon.icon-wishlist,
.wishlist-card-wrapper .product-hover button:hover.active .icon.icon-compare{
  fill: {{ settings.card_button_hr_text }};
  color: {{ settings.card_button_hr_text }};
}
.wishlist-card-wrapper .countdown-timer .main-c-motel{
  background-color: {{ settings.countdown_bg }};
  color: {{ settings.countdown_text }};
}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding-top }}px;
  padding-bottom: {{ section.settings.padding-bottom }}px;
}
@media screen and (max-width: 1429px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top-1429 }}px;
    padding-bottom: {{ section.settings.padding-bottom-1429 }}px;
  }
}
@media screen and (max-width: 1199px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top-1199 }}px;
    padding-bottom: {{ section.settings.padding-bottom-1199 }}px;
  }
}
@media screen and (max-width: 991px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top-991 }}px;
    padding-bottom: {{ section.settings.padding-bottom-991 }}px;
  }
}
@media screen and (max-width: 767px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top-767 }}px;
    padding-bottom: {{ section.settings.padding-bottom-767 }}px;
  }
}
@media screen and (max-width: 575px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top-575 }}px;
    padding-bottom: {{ section.settings.padding-bottom-575 }}px; 
  }
}
{% endstyle %}

