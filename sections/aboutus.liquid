{{ 'section-aboutus.css' | asset_url | stylesheet_tag }}
<div class="{{ section.settings.section_width }}">
<div class="main-aboutus-section section-{{ section.id }}-padding {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
   <div class="{% if section.settings.section_width == 'padding_width' or section.settings.section_width == 'full_width' and section.settings.about_style == 'classic' %}page-width{% endif %}">
       <div class="main-about-us-section-wrapper {{ section.settings.image_position }} {{ section.settings.about_style }}">
        <div class="main-about-us-left-side-part">
          <div class="about-inner1">
            <div class="about-small-image">
                <div class="small-image-inner-well">
                  {% if section.settings.about-us-smallimg != blank %}
                  <div class="media media--transparent ratio" style="--ratio-percent: 108%">
                    {{ section.settings.about-us-smallimg | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                  </div>
                  {% else %}
                  <div class="media media--transparent ratio" style="--ratio-percent: 108%">
                    {{ 'collection-5' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                  </div>
                  {% endif %}
                </div>
            </div>
            <div class="about-small-image-inner">
                <div class="small-image-inner-well">
                  {% if section.settings.about-us-smallimg-inner != blank %}
                  <div class="media media--transparent ratio" style="--ratio-percent: 108%">
                    {{ section.settings.about-us-smallimg-inner | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                  </div>
                  {% else %}
                  <div class="media media--transparent ratio" style="--ratio-percent: 108%">
                    {{ 'collection-5' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                  </div>
                  {% endif %}
                </div>
            </div>
          </div>
          <div class="main-master-magnifly">
            {%- if section.settings.banner_type == 'image' -%}
              <div>
                {% if section.settings.about-us-img != blank %}
                <div class="media media--transparent ratio" style="--ratio-percent: 154%">
                  {{ section.settings.about-us-img | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                </div>
                {% else %}
                <div class="media media--transparent ratio" style="--ratio-percent: 154%">
                  {{ 'collection-6' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                </div>
                {% endif %}
              </div>
            {%- endif -%}

            {%- if section.settings.banner_type == 'video' -%}
            {% if section.settings.local_url != blank %}
            <div class="media media--transparent ratio" style="--ratio-percent: 154%">
              <video id="Mp4Video-{{ section.id }}" class="about_video" data-type="mp4"
                src="{{ section.settings.local_url }}" loop muted playsinline autoplay></video>
            </div>
            {% else %}
            <div class="media media--transparent ratio" style="--ratio-percent: 154%">
              {{ 'collection-5' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
            </div>
            {% endif %}
            {%- endif -%}

            {%- if section.settings.banner_type == 'online-video' -%}
            {% if section.settings.video_url != blank %}
            <div class="media media--transparent ratio" style="--ratio-percent: 154%">
              {%- if section.settings.video_url.type == 'youtube' -%}
              <iframe src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?enablejsapi=1"
                class="js-youtube" allow="autoplay; encrypted-media" allowfullscreen
                title="{{ section.settings.description | escape }}"></iframe>
              {%- else -%}
              <iframe src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}" class="js-vimeo"
                allow="autoplay; encrypted-media" allowfullscreen
                title="{{ section.settings.description | escape }}"></iframe>
              {%- endif -%}
            </div>
            {% else %}
            <div class="media media--transparent ratio" style="--ratio-percent: 154%">
              {{ 'collection-4' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
            </div>
            {% endif %}
            {%- endif -%}
            
          
            <div class="small-image-inner-bottom-img">
                {% if section.settings.about-us-bottom != blank %}
                <div class="media media--transparent ratio" style="--ratio-percent: 46%">
                  {{ section.settings.about-us-bottom | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                </div>
                {% else %}
                <div class="media media--transparent ratio" style="--ratio-percent: 46%">
                  {{ 'collection-5' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                </div>
                {% endif %}
              </div>
            </div>
          
        </div>
        <div class="main-about-us-right-side-part main-about-us-right-side-part--{{ section.settings.text_alignment }}">
        <div class="about-text-sec">

          {% if section.settings.heading-img != blank or section.settings.main_subheading != blank or section.settings.main_heading != blank %}
            <div class="about_title_wrap">
              {% if section.settings.heading-img != blank %}
                <div class="heading-img w-100 {{ section.settings.text_alignment }}">
                  <img src="{{ section.settings.heading-img | img_url: 'master' }}" alt="slider-img" class="w-100" loading="eager">
                </div>
              {% endif %}
               {% if section.settings.main_subheading != blank %}
                <span class="theme_main_subheading">{{ section.settings.main_subheading }}</span>
               {% endif %}
               {% if section.settings.main_heading != blank %}
                <div class="theme_main_heading h2">{{ section.settings.main_heading }}</div>
               {% endif %}
            </div>
          {% endif %}
          <div class="about-content-block">
          {% for block in section.blocks %}
          {% if block.type == 'about-content' %}
          <div class="about-content-text">
            <div class="about-content-number {% if section.settings.number_shape == "square" %}about_number_square{% endif %}">
              {% if block.settings.content_img != blank %}
                <div class="media media--transparent ratio" style="--ratio-percent: 100%">
                  {{ block.settings.content_img | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                </div>
                {% else %}
                <div class="media media--transparent ratio" style="--ratio-percent: 100%">
                  {{ 'collection-5' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                </div>
              {% endif %}
            </div>
            <div class="about-content-heading">
              <div class="h4">{{ block.settings.content_heading }}</div>
            </div>
          </div>
          {% endif %}
          {% endfor %}
          </div>
          {% if section.settings.about-main-paragraph != blank %}
            <div class="theme_main_description">{{ section.settings.about-main-paragraph }}</div>
          {% endif %}
          <div class="about_button about_btn--{{ section.settings.text_alignment }}">
            <a {% if section.settings.about-btn-url %} href="{{ section.settings.about-btn-url }}" {% else %} role="link"
            aria-disabled="true" {% endif %} class="button theme_buttons">{{ section.settings.about-btn-text }}</a>
          </div>
        </div>
        </div>
       </div>
   </div>
</div>
</div>

{% style %}
  .main-aboutus-section .main-about-us-right-side-part .heading-img.center{
    margin: 0 auto;
  }
  .main-aboutus-section .main-about-us-right-side-part .heading-img.right{
    margin: 0 0 0 auto;
  }
  .main-about-us-right-side-part .theme_main_subheading {
    color: {{ section.settings.theme_subheading_color }};
  }
  .main-about-us-right-side-part .theme_main_heading {
    color: {{ section.settings.theme_heading_color }};
  }
  .main-about-us-right-side-part .theme_main_description{
    color: {{ section.settings.content_color }};
    border-top: 1px solid {{ settings.border_color }};
  }
  .main-about-us-right-side-part .theme_buttons {
    background-color: {{ section.settings.theme_btn_bg }};
    color:{{ section.settings.theme_btn_text }};
  }
  .main-about-us-right-side-part .theme_buttons:hover {
    background-color: {{ section.settings.theme_btn_hr_bg }};
    color:{{ section.settings.theme_btn_hr_text }}; 
  }
  .about-content-text .about-content-heading .h4{
    color: {{ section.settings.content-text }};
  }
  .about-content-text .about-content-number {
    background-color: {{ section.settings.content-bg }};
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    margin-top: {{ section.settings.margin-top }}px;
    margin-bottom: {{ section.settings.margin-bottom }}px;
    background-color: {{ section.settings.section_bg }};
  }
  @media screen and (max-width: 1429px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1429 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1429 }}px;
      margin-top: {{ section.settings.margin-top-1429 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1429 }}px;
    }
  }
  @media screen and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1199 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1199 }}px;
      margin-top: {{ section.settings.margin-top-1199 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1199 }}px;
    }
  }
  @media screen and (max-width: 991px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-991 }}px;
      padding-bottom: {{ section.settings.padding-bottom-991 }}px;
      margin-top: {{ section.settings.margin-top-991 }}px;
      margin-bottom: {{ section.settings.margin-bottom-991 }}px;
    }
  }
  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-767 }}px;
      padding-bottom: {{ section.settings.padding-bottom-767 }}px;
      margin-top: {{ section.settings.margin-top-767 }}px;
      margin-bottom: {{ section.settings.margin-bottom-767 }}px;  
    }
  }
  @media screen and (max-width: 575px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-575 }}px;
      padding-bottom: {{ section.settings.padding-bottom-575 }}px;
      margin-top: {{ section.settings.margin-top-575 }}px;
      margin-bottom: {{ section.settings.margin-bottom-575 }}px;  
    }
  }
{% endstyle %}

