{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'video-section.css' | asset_url | stylesheet_tag }}
{{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}

{% if settings.p_image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- if settings.p_enable_quick_add -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  .main-collection-product-grid-section .card.card--card .card__information{
    border-top: 4px double {{ settings.card-border-color }};
  }
  .main-collection-product-grid-section .grid--1-col-desktop .card__inner{
    border-right: 4px double {{ settings.border_color }};
  }
  .main-collection-product-grid-section .grid--1-col-desktop .card.card--card .card__information{
    border-top: none;
  }
  .main-collection-product-grid-section .quantity:after{
    border: 1px solid {{ settings.q_button_border }};
  }
  .main-collection-product-grid-section .quantity__input{
    color: {{ settings.q_button_color }};
  }
  .main-collection-product-grid-section .quantity__button{
    background-color: {{ settings.q_button_bg }} !important;
    color: {{ settings.q_button_color }};
  }
  .main-collection-product-grid-section .quantity__button:hover{
    background-color: {{ settings.q_button_hr_bg }} !important;
    color: {{ settings.q_button_hr_color }};
  }
  .main-collection-product-grid-section .product-card-wrapper .card__heading a, .product_tile_size_holder, .swatch-anchor{
    color: {{ settings.card_product_title_color }};
  }
  .main-collection-product-grid-section .product-card-wrapper .card__heading a:hover{
    color: {{ settings.card_product_title_hr_color }};
  }
  .main-collection-product-grid-section .product-card-wrapper .product_vendor {
    color: {{ settings.card_product_vendor_color }};
  }
  .main-collection-product-grid-section .product-card-wrapper .card__heading a{
    color: {{ settings.card_product_title_color }};
  }
  .main-collection-product-grid-section .product-card-wrapper .price--on-sale .price-item--regular {
    color: {{ settings.card_product_sale_price_color }};
  }
  .main-collection-product-grid-section .product-card-wrapper .price--on-sale .price-item--last {
    color: {{ settings.card_product_regular_price_color }};
  }
  .main-collection-product-grid-section .quick-add__submit,
  .main-collection-product-grid-section .product-hover button{
    background-color: {{ settings.card_button_bg }};
    color: {{ settings.card_button_text }};
  }
  .main-collection-product-grid-section .quick-add__submit:hover,
  .main-collection-product-grid-section .product-hover button:hover{
    background-color: {{ settings.card_button_hr_bg }};
    color: {{ settings.card_button_hr_text }};
  }
  .main-collection-product-grid-section .product-hover .active .icon.icon-wishlist,
  .main-collection-product-grid-section .product-hover .active .icon.icon-compare{
    fill: {{ settings.card_button_text }};
    color: {{ settings.card_button_text }};
  }
  .main-collection-product-grid-section .product-hover button:hover.active .icon.icon-wishlist,
  .main-collection-product-grid-section .product-hover button:hover.active .icon.icon-compare{
    fill: {{ settings.card_button_hr_text }};
    color: {{ settings.card_button_hr_text }};
  }
  .main-collection-product-grid-section .countdown-timer .main-c-motel{
    background-color: {{ settings.countdown_bg }};
    color: {{ settings.countdown_text }};
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
  }
  @media screen and (max-width: 1429px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1429 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1429 }}px;
    }
  }
  @media screen and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1199 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1199 }}px;
    }
  }
  @media screen and (max-width: 991px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-991 }}px;
      padding-bottom: {{ section.settings.padding-bottom-991 }}px;
    }
  }
  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-767 }}px;
      padding-bottom: {{ section.settings.padding-bottom-767 }}px;
    }
  }
  @media screen and (max-width: 575px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-575 }}px;
      padding-bottom: {{ section.settings.padding-bottom-575 }}px; 
    }
  }
{%- endstyle -%}

<div class="main-collection-product-grid-section section-{{ section.id }}-padding section-{{ section.id }}-margin swatch-{{ section.id }}">
  {%- paginate collection.products by section.settings.products_per_page -%}
    {% comment %} Sort is the first tabbable element when filter type is vertical {% endcomment %}
    

    <div class="{% if section.settings.filter_type == 'vertical' or section.settings.filter_type == 'vertical-right' %} facets-vertical page-width{% endif %} {% if section.settings.filter_type == 'vertical-right' %} facet-verticle-right{% endif %}">
      {{ 'component-facets.css' | asset_url | stylesheet_tag }}
      <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
      {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
        <aside
          aria-labelledby="verticalTitle"
          class="facets-wrapper{% unless section.settings.enable_filtering %} facets-wrapper--no-filters{% endunless %}{% if section.settings.filter_type != 'vertical' and section.settings.filter_type != 'vertical-right'%} page-width{% endif %}"
          id="main-collection-filters"
          data-id="{{ section.id }}"
        >
          {% render 'facets',
            results: collection,
            enable_filtering: section.settings.enable_filtering,
            enable_sorting: section.settings.enable_sorting,
            filter_type: section.settings.filter_type,
            paginate: paginate
          %}
        </aside>
      {%- endif -%}

      <div
        class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        id="ProductGridContainer"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
        {% endif %}
      >
    {%- if section.settings.enable_sorting and section.settings.filter_type == 'vertical' or section.settings.filter_type == 'vertical-right' -%}
      <facet-filters-form class="facets facets-vertical-sort small-hide no-js-hidden">
        <form class="facets-vertical-form" id="FacetSortForm">
      
          <div class="custom-lavel-grid-system">
            <a href="javascript:void(0)" aria-label="Three column"
              class="grid-setup-3 grid-terminal-flash productGridBtn" data-count="3" id="custom-protocol-3">{%
              render 'icon-grid-three' %}</a>
           <a href="javascript:void(0)" aria-label="Double column"
              class="grid-setup-2 grid-terminal-flash productGridBtn" data-count="2" id="custom-protocol-2">{%
              render 'icon-grid-double' %}</a>
            <a href="javascript:void(0)" aria-label="List"
              class="grid-setup-1 grid-terminal-flash productGridBtn" data-count="1" id="custom-protocol-1">{%
              render 'icon-grid-single' %}</a>
          </div>
      
          <div class="facet-filters sorting caption">
            <div class="facet-filters__field">
              <h2 class="facet-filters__label caption-large text-body">
                <label for="SortBy">{{ 'products.facets.sort_by_label' | t }}</label>
              </h2>
              <div class="select">
                {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
                <select
                  name="sort_by"
                  class="facet-filters__sort select__select caption-large"
                  id="SortBy"
                  aria-describedby="a11y-refresh-page-message"
                >
                  {%- for option in collection.sort_options -%}
                    <option
                      value="{{ option.value | escape }}"
                      {% if option.value == sort_by %}
                        selected="selected"
                      {% endif %}
                    >
                      {{ option.name | escape }}
                    </option>
                  {%- endfor -%}
                </select>
                {% render 'icon-caret' %}
              </div>
            </div>
            <noscript>
              <button type="submit" class="facets__button-no-js button button--secondary">
                {{ 'products.facets.sort_button' | t }}
              </button>
            </noscript>
          </div>

          <div class="product-count-vertical" role="status">
            <h2 class="product-count__text text-body">
              <span id="ProductCountDesktop">
                {%- if collection.results_count -%}
                  {{
                    'templates.search.results_with_count'
                    | t: terms: collection.terms, count: collection.results_count
                  }}
                {%- elsif collection.products_count == collection.all_products_count -%}
                  {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
                {%- else -%}
                  {{
                    'products.facets.product_count'
                    | t: product_count: collection.products_count, count: collection.all_products_count
                  }}
                {%- endif -%}
              </span>
            </h2>
            {%- render 'loading-spinner' -%}
          </div>
        </form>
      </facet-filters-form>
    {%- endif -%}
     {% if section.settings.filter_type == 'vertical' or section.settings.filter_type == 'vertical-right' %}
          {% if section.settings.show_topimg %}
            <div class="product-grid-top-banner">
              {% if section.settings.grid-top-img != blank %}
              <div class="media media--transparent ratio" style="--ratio-percent: 30%">
                {{  section.settings.grid-top-img | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'magniflier w-100' }}
              </div>
              {% else %}
              <div class="media media--transparent ratio" style="--ratio-percent: 30%">
                {{ 'collection-5' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
              </div>
              {% endif %}
            </div>
          {% endif %}
        {% endif %}
        {%- if collection.products.size == 0 -%}
          <div class="collection collection--empty page-width" id="product-grid" data-id="{{ section.id }}">
            <div class="loading-overlay gradient"></div>
            <div class="title-wrapper center">
              <h2 class="title title--primary">
                {{ 'sections.collection_template.empty' | t -}}
                <br>
                {{
                  'sections.collection_template.use_fewer_filters_html'
                  | t: link: collection.url, class: 'button collection-empty-button underlined-link link'
                }}
              </h2>
            </div>
          </div>
        {%- else -%}
          <div class="collection {% if section.settings.filter_type != 'vertical' and section.settings.filter_type != 'vertical-right' %} page-width{% endif %} grid-collection-product">
            <div class="loading-overlay gradient"></div>
            <ul
              id="product-grid"
              data-id="{{ section.id }}"
              class="
                grid product-grid
                grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-mobile
              "
            >
              {%- for product in collection.products -%}
                {% assign lazy_load = false %}
                {%- if forloop.index > 2 -%}
                  {%- assign lazy_load = true -%}
                {%- endif -%}
                <li
                  class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}
                    data-cascade
                    style="--animation-order: {{ forloop.index }};"
                  {% endif %}
                >
                  {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: settings.p_image_ratio,
                    image_shape: settings.p_image_shape,
                    show_secondary_image: settings.p_show_secondary_image,
                    show_vendor: settings.p_show_vendor,
                    show_badge: settings.show_badge,
                    show_countdown: settings.p_show_countdown,
                    show_rating: settings.p_show_rating,
                    lazy_load: lazy_load,
                    show_quick_add: settings.p_enable_quick_add,
                    quantity_enable: settings.p_quantity_enable,
                    enable_product_variants: settings.p_variants_enable,
                    section_id: section.id
                  %}
                </li>
              {%- endfor -%}
            </ul>

            {%- if paginate.pages > 1 -%}
              {% render 'pagination', paginate: paginate, anchor: '' %}
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  {%- endpaginate -%}
  {% if settings.p_image_shape == 'arch' %}
    {% render 'mask-arch' %}
  {%- endif -%}
</div>

{% schema %}
{
  "name": "t:sections.main-collection-product-grid.name",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.main-collection-product-grid.settings.top_banner_setting"
    },
    {
      "type": "checkbox",
      "id": "show_topimg",
      "label": "t:sections.main-collection-product-grid.settings.enable_top_banner",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "grid-top-img",
      "label": "t:sections.main-collection-product-grid.settings.top_banner"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 24,
      "step": 4,
      "default": 16,
      "label": "t:sections.main-collection-product-grid.settings.products_per_page.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 3,
      "label": "t:sections.main-collection-product-grid.settings.columns_desktop.label"
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2,
      "label": "t:sections.main-collection-product-grid.settings.columns_mobile.label"
    },
    {
      "type": "header",
      "content": "t:sections.main-collection-product-grid.settings.header__1.content"
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "default": true,
      "label": "t:sections.main-collection-product-grid.settings.enable_filtering.label",
      "info": "t:sections.main-collection-product-grid.settings.enable_filtering.info"
    },
    {
      "type": "select",
      "id": "filter_type",
      "options": [
        {
          "value": "horizontal",
          "label": "t:sections.main-collection-product-grid.settings.filter_type.options__1.label"
        },
        {
          "value": "vertical",
          "label": "t:sections.main-collection-product-grid.settings.filter_type.options__2.label"
        },
        {
          "value": "vertical-right",
          "label": "t:sections.main-collection-product-grid.settings.filter_type.options__4.label"
        },
        {
          "value": "drawer",
          "label": "t:sections.main-collection-product-grid.settings.filter_type.options__3.label"
        },
        {
          "value": "drawer-right",
          "label": "t:sections.main-collection-product-grid.settings.filter_type.options__5.label"
        }
      ],
      "default": "horizontal",
      "label": "t:sections.main-collection-product-grid.settings.filter_type.label",
      "info": "t:sections.main-collection-product-grid.settings.filter_type.info"
    },
    {
      "type": "header",
      "content": "t:sections.main-collection-product-grid.settings.video_banner_content"
    },
    {
      "type": "text",
      "id": "advertize_heading",
      "default": "Advertisement",
      "label": "t:sections.main-collection-product-grid.settings.advertize_heading"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "t:sections.video.settings.cover_image.label"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "accept": [
        "youtube",
        "vimeo"
      ],
      "label": "t:sections.video.settings.video_url.label",
      "placeholder": "t:sections.video.settings.video_url.placeholder",
      "info": "t:sections.video.settings.video_url.info"
    },
    {
      "type": "image_picker",
      "id": "collection-promote-banner",
      "label": "t:sections.main-collection-product-grid.settings.promo_image"
    },
    {
      "type": "url",
      "id": "banner_url",
      "label": "t:sections.main-collection-product-grid.settings.promo_url"
    },
    {
      "type": "text",
      "id": "first_heading",
      "default": "Custom block",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "first_content",
      "default": "Custom block displayed on the filter sidebar of the collection page. Insert your unique content here:",
      "label": "t:sections.main-collection-product-grid.settings.content"
    },
    {
      "type": "text",
      "id": "second_heading",
      "default": "Custom block",
      "label": "t:sections.main-collection-product-grid.settings.heading"
    },
    {
      "type": "textarea",
      "id": "second_content",
      "default": "Custom block displayed on the filter sidebar of the collection page. Insert your unique content here:",
      "label": "t:sections.main-collection-product-grid.settings.content"
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "default": true,
      "label": "t:sections.main-collection-product-grid.settings.enable_sorting.label"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "number",
      "id": "padding-top",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "number",
      "id": "padding-bottom",
      "label": "Padding bottom",
      "default": 60
    },
    {
      "type": "header",
      "content": "Screen wise section padding"
    },
    {
      "type": "header",
      "content": "@media screen 1429"
    },
    {
      "type": "number",
      "id": "padding-top-1429",
      "label": "Padding top",
      "default": 50
    },
    {
      "type": "number",
      "id": "padding-bottom-1429",
      "label": "Padding bottom",
      "default": 50
    },
    {
      "type": "header",
      "content": "@media screen 1199"
    },
    {
      "type": "number",
      "id": "padding-top-1199",
      "label": "Padding top",
      "default": 45
    },
    {
      "type": "number",
      "id": "padding-bottom-1199",
      "label": "Padding bottom",
      "default": 45
    },
    {
      "type": "header",
      "content": "@media screen 991"
    },
    {
      "type": "number",
      "id": "padding-top-991",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "number",
      "id": "padding-bottom-991",
      "label": "Padding bottom",
      "default": 40
    },
    {
      "type": "header",
      "content": "@media screen 767"
    },
    {
      "type": "number",
      "id": "padding-top-767",
      "label": "Padding top",
      "default": 35
    },
    {
      "type": "number",
      "id": "padding-bottom-767",
      "label": "Padding bottom",
      "default": 35
    },
    {
      "type": "header",
      "content": "@media screen 575"
    },
    {
      "type": "number",
      "id": "padding-top-575",
      "label": "Padding top",
      "default": 30
    },
    {
      "type": "number",
      "id": "padding-bottom-575",
      "label": "Padding bottom",
      "default": 30
    }
  ]
}
{% endschema %}
