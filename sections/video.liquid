<div class="video_graper_wrapper d-inline-block section-{{ section.id }}-padding section-{{ section.id }}-margin">
  <div class="main-vieo-wrapper">
    <div class="video-section isolate {{ section.settings.section_width }}">
      
        {% if section.settings.heading-img != blank or section.settings.main_subheading != blank or section.settings.heading != blank or section.settings.information_paragraph != blank %}
          <div class="video-section-main_title title_bottom_margin">
            {% if section.settings.heading-img != blank %}
              <div class="heading-img w-100 {{ section.settings.heading_alignment }}">
                <img src="{{ section.settings.heading-img | img_url: 'master' }}" alt="slider-img" class="w-100" loading="eager">
              </div>
            {% endif %}
            {% if section.settings.main_subheading != blank %}
              <div class="video_subtitle theme_main_subheading">{{ section.settings.main_subheading }}</div>
            {% endif %}
            {% if section.settings.heading != blank %}
              <div class="video_title theme_main_heading h2">{{ section.settings.heading }}</div>
            {% endif %}
            {% if section.settings.information_paragraph != blank %}
              <div class="video_description theme_main_description">{{ section.settings.information_paragraph }}</div>
            {% endif %}
          </div>
        {% endif %}
     
      <noscript>
        <div class="video-section__media">
          <a
            href="{{ section.settings.video_url }}"
            class="video-section__poster media media--transparent media--landscape{% if section.settings.cover_image == blank %} video-section__placeholder{% endif %}"
          >
            {%- if section.settings.cover_image != blank -%}
              {%- capture sizes -%}
          {% if section.settings.full_width -%}
          100vw
          {%- else -%}
          (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px)
          calc(100vw - 10rem), 100vw
          {%- endif %}
          {%- endcapture -%}
              {%- assign alt = 'sections.video.load_video' | t: description: section.settings.description | escape -%}
              {{
                section.settings.cover_image
                | image_url: width: 3840
                | image_tag:
                  loading: 'lazy',
                  sizes: sizes,
                  widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                  alt: alt
              }}
            {%- else -%}
              {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
            {%- endif -%}
          </a>
        </div>
      </noscript>
      <deferred-media
        class="video-section__media deferred-media no-js-hidden global-media-settings video-hover-img{% if section.settings.full_width %} global-media-settings--full-width{% endif %}"
        data-media-id="{{ section.settings.video_url.id }}"
        {% if section.settings.cover_image !=blank %}
          style="padding-bottom: {{ 1 | divided_by: section.settings.cover_image.aspect_ratio | times: 100 }}%;" {% endif
          %}
      >
        <button
          id="Deferred-Poster-Modal-{{ section.settings.video_url.id }}"
          class="video-section__poster media deferred-media__poster media--landscape"
          type="button"
          aria-label="{{ block.settings.video_heading }}"
        >
          {%- if section.settings.cover_image != blank -%}
            {%- capture sizes -%}
        {% if section.settings.full_width -%}
        100vw
        {%- else -%}
        (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px)
        calc(100vw - 10rem), 100vw
        {%- endif %}
        {%- endcapture -%}
            {%- assign alt = 'sections.video.load_video' | t: description: section.settings.description | escape -%}
            {{
              section.settings.cover_image
              | image_url: width: 3840
              | image_tag:
                loading: 'lazy',
                sizes: sizes,
                widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                alt: alt
            }}
          {%- else -%}
            {{ 'collection-6' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
          {%- endif -%}
          <div class="video_text">
            <div class="video_inner-content">
              <div class="content-boxing">
                {% for block in section.blocks %}
                  {% if block.type == 'playbutton' %}
                    <div class="deferred-media__poster-button-video-section">
                      <span class="deferred-media__poster-button motion-reduce">
                        {%- render 'icon-play' -%}
                      </span>
                    </div>
                  {% endif %}

                  {% if block.type == 'videoheading' %}
                    <div class="video-content-text">
                      <div class="theme_main_subheading">{{ block.settings.video_subheading }}</div>
                      <div class="h2 content_inner_heading">{{ block.settings.video_heading }}</div>
                    </div>
                  {% endif %}

                  {% if block.type == 'buttons' %}
                    <div class="video_btn_wrapper">
                      {% if block.settings.button1_text != blank %}
                        <a
                          {% if block.settings.videobtn_first %}
                            href="{{ block.settings.videobtn_first }}"
                          {% else %}
                            role="link" aria-disabled="true"
                          {% endif %}
                          class="button theme_buttons"
                          aria-label="{{ block.settings.button1_text }}"
                        >
                          {{- block.settings.button1_text -}}
                        </a>
                      {% endif %}
                      {% if block.settings.button2_text != blank %}
                        <a
                          {% if block.settings.videobtn_second %}
                            href="{{ block.settings.videobtn_second }}"
                          {% else %}
                            role="link" aria-disabled="true"
                          {% endif %}
                          class="button theme_buttons"
                          aria-label="{{ block.settings.button2_text }}"
                        >
                          {{- block.settings.button2_text -}}
                        </a>
                      {% endif %}
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          </div>
        </button>
        <template>
          {%- if section.settings.video_url.type == 'youtube' -%}
            <iframe
              src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?enablejsapi=1"
              class="js-youtube"
              allow="autoplay; encrypted-media"
              allowfullscreen
              title="{{ section.settings.description | escape }}"
            ></iframe>
          {%- else -%}
            <iframe
              src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}"
              class="js-vimeo"
              allow="autoplay; encrypted-media"
              allowfullscreen
              title="{{ section.settings.description | escape }}"
            ></iframe>
          {%- endif -%}
        </template>
        <div class="video-close">{% render 'icon-close' %}</div>
      </deferred-media>
    </div>
  </div>
</div>
          
<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.video-close').forEach(function(element) {
    element.addEventListener('click', function() {
      document.querySelector('.deferred-media[loaded]>.deferred-media__poster').style.display = 'block';
      document.querySelector('.video-section__media iframe').style.display = 'none';
    });
  });

  document.querySelectorAll('.deferred-media__poster-button, .deferred-media__poster').forEach(function(element) {
    element.addEventListener('click', function() {
      document.querySelector('.video-section__media iframe').style.display = 'block';
      document.querySelector('.deferred-media[loaded]>.deferred-media__poster').style.display = 'none';
    });
  });
});
</script>

{%- style -%}
  .video_subtitle {
    color: {{ section.settings.video_subtitle }};
  }
  .video_title {
    color: {{ section.settings.video_title }};
  }
  .video_description {
    color: {{ section.settings.video_description }};
  }
  .video-section-main_title {
    text-align: {{ section.settings.heading_alignment }};
  }
  .video_graper_wrapper .heading-img.center{
    margin: 0 auto;
  }
  .video_graper_wrapper .heading-img.right{
    margin: 0 0 0 auto;
  }
  {% for block in section.blocks %}
    {% if block.type == 'buttons' %}
      .video_inner-content .video_btn_wrapper .theme_buttons {
        background-color: {{ block.settings.button_bg_color }};
        color: {{ block.settings.button_text_color }};
      }
      .video_inner-content .video_btn_wrapper .theme_buttons:hover {
        background-color: {{ block.settings.button_bg_hover_color }};
        color: {{ block.settings.button_text_hover_color }};
      }
    {% endif %}
    {% if block.type == 'videoheading' %}
      .video-content-text .theme_main_heading, .video-content-text .theme_main_subheading{
        color: {{ block.settings.main_heading_color }};
      }
      .content_inner_heading{
        color: {{ block.settings.main_heading_color }};
        font-size: {{ block.settings.heading_size }}px;
      }
      @media screen and (max-width: 1429px){
       .content_inner_heading{
          font-size: {{ block.settings.heading_size | times: 0.6875 | round: 0 }}px;
        }
      }
      @media screen and (max-width: 989px){
       .content_inner_heading{
          font-size: {{ block.settings.heading_size | times: 0.55 | round: 0 }}px;
        }
      }
      @media screen and (max-width: 749px){
       .content_inner_heading{
          font-size: {{ block.settings.heading_size | times: 0.425 | round: 0 }}px;
        }
      }
      @media screen and (max-width: 575px){
       .content_inner_heading{
          font-size: {{ block.settings.heading_size | times: 0.3 | round: 0 }}px;
        }
      }
    {% endif %}
    {% if block.type == 'playbutton' %}
      .video-close {
        background-color: {{ settings.button_bg }};
        color: {{ settings.button_text }};
      }
      .video-close:hover {
        background-color: {{ settings.button_hr_bg }};
        color: {{ settings.button_hr_text }};
      }
      .video-section .deferred-media__poster-button{
        border: 1px solid {{ block.settings.play_button_bg_color  }};
        color:{{ block.settings.play_button_text_color }};
        transition: all 0.5s ease;
      }
      .video-section .deferred-media__poster-button:hover{
        border: 1px solid {{ block.settings.play_button_bg_hover_color }};
        color:{{ block.settings.play_button_text_hover_color }};
      }
      .video-section .deferred-media__poster-button:hover::before {
        border-top-color: {{ block.settings.play_button_bg_hover_color }};
        border-right-color: {{ block.settings.play_button_bg_hover_color }};
        border-bottom-color: {{ block.settings.play_button_bg_hover_color }};
        transition: border-top-color 0.15s linear, border-right-color 0.15s linear 0.1s, border-bottom-color 0.15s linear 0.2s;
      }
      .video-section .deferred-media__poster-button:hover::after {
        border-top: 2px solid {{ block.settings.play_button_bg_hover_color }};
      }
    {% endif %}
  {% endfor %}

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    margin-top: {{ section.settings.margin-top }}px;
    margin-bottom: {{ section.settings.margin-bottom }}px;
  }
  @media screen and (max-width: 1429px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1429 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1429 }}px;
      margin-top: {{ section.settings.margin-top-1429 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1429 }}px;
    }
  }
  @media screen and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1199 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1199 }}px;
      margin-top: {{ section.settings.margin-top-1199 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1199 }}px;
    }
  }
  @media screen and (max-width: 991px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-991 }}px;
      padding-bottom: {{ section.settings.padding-bottom-991 }}px;
      margin-top: {{ section.settings.margin-top-991 }}px;
      margin-bottom: {{ section.settings.margin-bottom-991 }}px;
    }
  }
  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-767 }}px;
      padding-bottom: {{ section.settings.padding-bottom-767 }}px;
      margin-top: {{ section.settings.margin-top-767 }}px;
      margin-bottom: {{ section.settings.margin-bottom-767 }}px;  
    }
  }
  @media screen and (max-width: 575px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-575 }}px;
      padding-bottom: {{ section.settings.padding-bottom-575 }}px;
      margin-top: {{ section.settings.margin-top-575 }}px;
      margin-bottom: {{ section.settings.margin-bottom-575 }}px;  
    }
  }
{%- endstyle -%}

