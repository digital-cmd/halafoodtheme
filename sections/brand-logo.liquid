{%- style -%}
  .brand_logo .swiper-button-next,
  .brand_logo .swiper-button-prev{
    background: {{ settings.button_bg }}; 
    color: {{ settings.button_text }};
  }
  .brand_logo .swiper-button-next:hover,
  .brand_logo .swiper-button-prev:hover{
    background: {{ settings.button_hr_bg }}; 
    color: {{ settings.button_hr_text }};
  }
  .brand_logo .swiper-pagination-bullet { 
    background: {{ settings.theme_dots }}; 
  }  
  .brand_logo .swiper-pagination-bullet.swiper-pagination-bullet-active { 
    background: {{ settings.theme_dots_active }};
  }
  .brand_logo .collection__title{
    text-align: {{ section.settings.main_title_alignment }};
  }
  .brand_logo-list-subtitle{
    color: {{ section.settings.subheading_color }};
  }
  .brand_logo-list-title{
    color: {{ section.settings.heading_color }};
  }
  .brand_logo-list-description{
    color: {{ section.settings.content_color }};
  }
  .brand_logo .heading-img.center{
    margin: 0 auto;
  }
  .brand_logo .heading-img.right{
    margin: 0 0 0 auto;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    margin-top: {{ section.settings.margin-top }}px;
    margin-bottom: {{ section.settings.margin-bottom }}px;
    background-color: {{ section.settings.section_bg }};
  }
  @media screen and (max-width: 1429px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1429 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1429 }}px;
      margin-top: {{ section.settings.margin-top-1429 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1429 }}px;
    }
  }
  @media screen and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1199 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1199 }}px;
      margin-top: {{ section.settings.margin-top-1199 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1199 }}px;
    }
  }
  @media screen and (max-width: 991px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-991 }}px;
      padding-bottom: {{ section.settings.padding-bottom-991 }}px;
      margin-top: {{ section.settings.margin-top-991 }}px;
      margin-bottom: {{ section.settings.margin-bottom-991 }}px;
    }
  }
  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-767 }}px;
      padding-bottom: {{ section.settings.padding-bottom-767 }}px;
      margin-top: {{ section.settings.margin-top-767 }}px;
      margin-bottom: {{ section.settings.margin-bottom-767 }}px;  
    }
  }
  @media screen and (max-width: 575px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-575 }}px;
      padding-bottom: {{ section.settings.padding-bottom-575 }}px;
      margin-top: {{ section.settings.margin-top-575 }}px;
      margin-bottom: {{ section.settings.margin-bottom-575 }}px;  
    }
  }
{%- endstyle -%}

<div class="brand_logo {{ section.settings.section_width }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="collection brand_logo_collection d-inline-block section-{{ section.id }}-padding">
    {% if section.settings.heading-img != blank or section.settings.c_subtitle != blank or section.settings.c_title != blank or section.settings.c_description != blank %}
      <div class="collection__title title_bottom_margin title-wrapper title-wrapper--no-top-margin">
        {% if section.settings.heading-img != blank %}
          <div class="heading-img w-100 {{ section.settings.main_title_alignment }}">
            <img src="{{ section.settings.heading-img | img_url: 'master' }}" alt="slider-img" class="w-100" loading="eager">
          </div>
        {% endif %}
        {%- if section.settings.c_subtitle != blank -%}
          <div class="brand_logo-list-subtitle theme_main_subheading">{{ section.settings.c_subtitle }}</div>
        {% endif %}
        {%- if section.settings.c_title != blank -%}
          <div class="brand_logo-list-title theme_main_heading h2">{{ section.settings.c_title }}</div>
        {% endif %}
        {%- if section.settings.c_description != blank -%}
          <div class="brand_logo-list-description theme_main_description">{{ section.settings.c_description }}</div>
        {% endif %}
      </div>
    {% endif %}
    <slider-component class="brand-slider swiper-container"
      data-desktop="{{ section.settings.columns_desktop }}" data-large-tablet="{{ section.settings.columns_large_tablet }}"
      data-tablet="{{ section.settings.columns_tablet }}" data-mobile="{{ section.settings.columns_mobile }}"
      data-loop="{{ section.settings.loop }}" data-speed="{{ section.settings.speed }}">
      <ul
        class="brand_logo-list contains-content-container swiper-wrapper"
        id="Slider-{{ section.id }}"
        role="list"
      >
        {%- liquid
          assign highest_ratio = 0
          for block in section.blocks
            if block.settings.image.aspect_ratio > highest_ratio
              assign highest_ratio = block.settings.image.aspect_ratio
            endif
          endfor
        -%}
        {%- for block in section.blocks -%}
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="brand_logo-list__item swiper-slide"
            {{ block.shopify_attributes }}
          >
            <div class="brand_logo-card content-container column-{{ block.id }}">
              {%- if block.settings.image != blank -%}
                {% if section.settings.image_ratio == 'adapt' or section.settings.image_ratio == 'circle' %}
                  {% assign spaced_image = true %}
                {% endif %}
                <div class="brand_logo-card__image-wrapper {% if spaced_image %} brand_logo-card-spacing{% endif %}">
                  <a href="{{ block.settings.brand-img-url }}" aria-label="{{ block.settings.brand-img-url }}"> 
                  <div
                    class="media media--transparent media--{{ section.settings.image_ratio }}"
                    {% if section.settings.image_ratio == 'adapt' %}
                      style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                    {% endif %}
                  >
                    {%- liquid
                      assign number_of_columns = section.settings.columns_desktop
                      assign grid_space_desktop = number_of_columns | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                    -%}
                    {{
                      block.settings.image
                      | image_url: width: 3200
                      | image_tag:
                        widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                        sizes: sizes,
                        class: 'brand_logo-card__image'
                    }}
                  </div>
                  </a>
                </div>
                {% else %}
                {% if section.settings.image_ratio == 'adapt' or section.settings.image_ratio == 'circle' %}
                  {% assign spaced_image = true %}
                {% endif %}
                <div class="brand_logo-card__image-wrapper {% if spaced_image %} brand_logo-card-spacing{% endif %}">
                  <div class="media media--transparent media--{{ section.settings.image_ratio }}"
                    {% if section.settings.image_ratio == 'adapt' %}
                      style="padding-bottom: 100%;"
                    {% endif %}
                  >
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                  </div>
                </div>
              {%- endif -%}
            </div>
          </li>
        {%- endfor -%}
      </ul>
      {% if section.settings.arrows %}
        <div class="swiper-buttons">
          <div class="swiper-button-next brand-swiper-button-next">{% render 'icon-caret' %}</div>
          <div class="swiper-button-prev brand-swiper-button-prev">{% render 'icon-caret' %}</div>
        </div>
      {% endif %}
      {% if section.settings.dots -%}
        <div class="swiper-pagination brand-swiper-pagination" id="swiper-pagination-{{section.id}}" style="position: inherit;"></div>
      {% endif %}
    </slider-component>
  </div>
</div>

