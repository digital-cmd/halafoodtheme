                  {{ section.settings.service-img1 | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                </div>
                {% else %}
                <div class="media media--transparent ratio" style="--ratio-percent: 100%">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                </div>
                {% endif %}
              </div>
              <div class="service-content">
                <div class="service-title">{{ section.settings.service-heading1 }}</div>
                <div class="service-content">{{ section.settings.service-content1 }}</div>
              </div>
