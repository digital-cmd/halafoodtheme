                  <div class="content-paragraph">{{ section.settings.second-why-choose-content }}</div>
                </div>
              </div>
            </div>

            <div class="why-choose-us-product-block-content3-wrapper">
              <div class="why-choose-block-inner why-choose-us-product-block-content3-wrapper--{{ section.settings.third_content_text_alignment }}">
                <div class="why-choose-us-content-img">
                  {% if section.settings.third-why-choose-block-image != blank %}
