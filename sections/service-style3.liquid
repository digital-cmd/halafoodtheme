{{ 'service-section-style3.css' | asset_url | stylesheet_tag }}

<div class="{{ section.settings.section_width }}">
  <div class="section-{{ section.id }}-padding why-choose-us-section {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <div class="why-choose-us-section-wrapper">
    <div class="page-width">
      <div class="why-chose-us-products-section3">
        <div class="why-chose-us-products-section3-wrapper3">
          <div class="why-choose-us-product-block-image3">
            <div class="why-choose-us-center-img">
              {% if section.settings.why-choose-block-main-image != blank %}
              <div class="media media--transparent ratio" style="--ratio-percent: 105%">
                <img src="{{ section.settings.why-choose-block-main-image | img_url: 'master' }}" alt="why-choose-us-img"
                  class="w-100" loading="lazy">
              </div>
              {% else %}
              <div class="media media--transparent ratio" style="--ratio-percent: 105%">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
              </div>
              {% endif %}
            </div>
          </div>
          
          <div class="why-choose-us-product-block-content3">
            <div class="why-choose-product-title3 why-choose-product-title3--{{ section.settings.text_alignment }}">
              {% if section.settings.heading-img != blank or section.settings.main_subheading != blank or section.settings.main_heading != blank or section.settings.main_paragraph != blank %}
                <div class="why-choose-product-title3-wrapper title_bottom_margin">
                {% if section.settings.heading-img != blank %}
                  <div class="heading-img w-100 {{ section.settings.text_alignment }}">
                    <img src="{{ section.settings.heading-img | img_url: 'master' }}" alt="slider-img" class="w-100" loading="eager">
                  </div>
                {% endif %}
                  {% if section.settings.main_subheading != blank %} <div class="theme_main_subheading">{{ section.settings.main_subheading }}</div>{% endif %}
                  {% if section.settings.main_heading != blank %}<div class="theme_main_heading">{{ section.settings.main_heading }}</div>{% endif %}
                  {% if section.settings.main_paragraph != blank %}<p class="theme_main_description">{{ section.settings.main_paragraph }}</p>{% endif %}
                </div>
              {% endif %}
            </div>
                  
            <div class="why-choose-us-product-block-content3-wrapper">
              <div class="why-choose-block-inner why-choose-us-product-block-content3-wrapper--{{ section.settings.first_content_text_alignment }}">
                <div class="why-choose-us-content-img">
                  {% if section.settings.first-why-choose-block-image != blank %}
                  <div class="media media--transparent ratio" style="--ratio-percent: 100%">
                    {{ section.settings.first-why-choose-block-image | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                  </div>
                  {% else %}
                  <div class="media media--transparent ratio" style="--ratio-percent: 100%">
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                  </div>
                  {% endif %}
                </div>
                <div class="why-choose-us-content-text3">
                  <div class="heading-title">{{ section.settings.first-why-choose-heading }}</div>
                  <div class="content-paragraph">{{ section.settings.first-why-choose-content }}</div>
                </div>
              </div>
            </div>

            <div class="why-choose-us-product-block-content3-wrapper">
              <div class="why-choose-block-inner why-choose-us-product-block-content3-wrapper--{{ section.settings.second_content_text_alignment }}">
                <div class="why-choose-us-content-img">
                  {% if section.settings.second-why-choose-block-image != blank %}
                  <div class="media media--transparent ratio" style="--ratio-percent: 100%">
                    {{ section.settings.second-why-choose-block-image | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                  </div>
                  {% else %}
