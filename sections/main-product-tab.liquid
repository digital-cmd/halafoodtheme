  <div class="main-product-inner-tabination section-{{ section.id }}-padding">
    <div class="page-width">
      <div class="main-product-tabination">
        <div class="product-description">
          <ul class="tabs-product">
            {% for block in section.blocks %}
              <li><a href="#tab-{{ block.id }}" class="{% if forloop.first %}active{% endif %}">{{ block.settings.tab_label }}</a></li>
            {% endfor %}
          </ul>
          <div class="product-tab-container">
            {% for block in section.blocks %}
              <div id="tab-{{ block.id }}" class="Produce-tab {% if forloop.first %}active{% endif %}">
                {% case block.type %}
                  {% when 'description' %}
                    {{ product.description }}
                  {% when 'additional_information' %}
                    {{ product.metafields.custom.additional_information | metafield_tag }}
                  {% when 'variant_information' %}
                    <table>
                      <tbody>
                        {% for product_option in product.options_with_values %}
                          <tr class="product_{{ product_option.name | handle }}">
                            <th class="product_value_title">{{ product_option.name }}</th>
                            <td class="product_value">
                              <p>
                                {% for value in product_option.values %}
                                  {{ value }}{% unless forloop.last %}, {% endunless %}
                                {% endfor %}
                              </p>
                            </td>
                          </tr>
                        {% endfor %}
                      </tbody>
                    </table>
                  {% when 'Custom_field' %}
                    {{ block.settings.content }}
                {% endcase %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>


<style>
  .product-tab-container li{
    list-style: inherit;
    margin-left: 10px;
  }
  .product-tab-container .Produce-tab {
    display: none;
  }
  .product-tab-container .Produce-tab.active {
    display: block;
  }
  .main-product-tabination .product-description {
    border: 1px solid {{ section.settings.border_color }};
  }
  .main-product-tabination .product-tab-container {
    border-top: 1px solid {{ section.settings.border_color }};
    color: {{ settings.content_color }};
  }
  .main-product-tabination table:not([class]) td, .main-product-tabination table:not([class]) th {
    border: 1px solid {{ section.settings.border_color }};
    color: {{ settings.page_title_text_color }};
  }
  .main-product-tabination .tabs-product li a:hover,
  .main-product-tabination .tabs-product li a.active {
    color: {{ settings.theme_main_color }};
  }
  .main-product-tabination .tabs-product li a.active:before{
    background: {{ settings.theme_main_color }};
    width: 100%;
  }
  .main-product-tabination .tabs-product li a:before{
    background: {{ settings.theme_main_color }};
  }
  .main-product-tabination .tabs-product li a{
    color: {{ section.settings.heading_color }};
    border-bottom: 3px solid transparent;
    border-right: 1px solid {{ section.settings.border_color }};
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    margin-top: {{ section.settings.margin-top }}px;
    margin-bottom: {{ section.settings.margin-bottom }}px;
  }
  @media screen and (max-width: 1429px) {
