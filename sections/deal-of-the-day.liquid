{%- liquid
  assign products_to_display = section.settings.collection.all_products_count

  if section.settings.collection.all_products_count > section.settings.products_to_show
    assign products_to_display = section.settings.products_to_show
    assign more_in_collection = true
  endif

  assign show_desktop_slider = false
  if section.settings.enable_desktop_slider and products_to_display >= section.settings.columns_desktop
    assign show_desktop_slider = true
  endif
-%}
<div class="{{ section.settings.section_width }}">
<div class="deal-collection-slider isolate {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} section-{{ section.id }}-padding swatch-{{ section.id }}">
  <div class="collection d-inline-block">
    {% if section.settings.heading-img != blank or section.settings.collections_subtitle != blank or section.settings.collections_title != blank or section.settings.collections_description != blank %}
      <div class="collection__title title_bottom_margin title-wrapper title-wrapper--no-top-margin page-width">
        {% if section.settings.heading-img != blank %}
          <div class="heading-img w-100 {{ section.settings.main_title_alignment }}">
            <img src="{{ section.settings.heading-img | img_url: 'master' }}" alt="slider-img" class="w-100" loading="eager">
          </div>
        {% endif %}
        {%- if section.settings.collections_subtitle != blank -%}
          <div class="deal-collection-subtitle theme_main_subheading">{{ section.settings.collections_subtitle }}</div>
        {% endif %}
        {%- if section.settings.collections_title != blank -%}
          <div class="deal-collection-title theme_main_heading h2 inline-richtext">{{ section.settings.collections_title }}</div>
        {%- endif -%}
        {%- if section.settings.collections_description != blank -%}
          <div class="deal-collection-description theme_main_description">{{ section.settings.collections_description }}</div>
        {% endif %}
      

        {% if section.settings.show_countdown %}
          <div class="deal_product_heading">
            <ul class="contdown_row">
              <span class="count-heading">{{ section.settings.count_heading }}</span>
              <li class="countdown_section">
                <span id="days" class="countdown_timer"></span>
                <span class="countdown_title">{{ section.settings.day_title }}</span>
              </li>
              <li class="countdown_section">
                <span id="hours" class="countdown_timer"></span>
                <span class="countdown_title">{{ section.settings.hour_title }}</span>
              </li>
              <li class="countdown_section">
                <span id="minutes" class="countdown_timer"></span>
                <span class="countdown_title">{{ section.settings.minute_title }}</span>
              </li>
              <li class="countdown_section">
                <span id="seconds" class="countdown_timer"></span>
                <span class="countdown_title">{{ section.settings.second_title }}</span>
              </li>
            </ul>
          </div>
          <script>
            const second = 1000,
              minute = second * 60,
              hour = minute * 60,
              day = hour * 24;
            let countDown = new Date('{{ section.settings.product_mont }} {{ section.settings.product_date }}, {{ section.settings.product_year }} 00:00:00').getTime(),
              x = setInterval(function () {
                let now = new Date().getTime(),
                  distance = countDown - now;
                document.getElementById('days').innerText = Math.floor(distance / (day)),
                  document.getElementById('hours').innerText = Math.floor((distance % (day)) / (hour)),
                  document.getElementById('minutes').innerText = Math.floor((distance % (hour)) / (minute)),
                  document.getElementById('seconds').innerText = Math.floor((distance % (minute)) / second);
                  if (distance <= 0) {
                    clearInterval(x); // Stop the countdown
                    document.querySelector('.deal_product_heading').style.display = 'none'; // Hide the countdown element
                  }
              }, second)
          </script>
        {% endif %}
        </div>
        {% endif %}
   
    <slider-component class="{% if section.settings.enable_desktop_slider == true %}swiper-container deal-slider{% endif %} slider-mobile-gutter page-width"
      data-enable="{{ section.settings.enable_desktop_slider }}"
      data-desktop="{{ section.settings.columns_desktop }}" data-largetablet="{{ section.settings.columns_large_tablet }}"
      data-tablet="{{ section.settings.columns_tablet }}" data-mobile="{{ section.settings.columns_mobile }}" data-autoplay="{{ section.settings.autoplay_enable }}"
      data-loop="{{ section.settings.loop }}" data-speed="{{ section.settings.speed }}" data-desktopspace="{{ settings.spacing_grid_horizontal }}" data-mobilespace="{{ settings.spacing_grid_horizontal | divided_by: 2 }}">
      <ul
        id="Slider-{{ section.id }}"
        class="{{ section.settings.collection_style }} {% if section.settings.enable_desktop_slider == true %}swiper-wrapper{% endif %} {% if section.settings.enable_desktop_slider == false %} product-grid contains-card contains-card--product {% endif %}
        {% if settings.card_style == 'standard' %} contains-card--standard{% endif %} 
        {% if section.settings.enable_desktop_slider == false %} grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_large_tablet }}-col-large-tab grid--{{ section.settings.columns_tablet }}-col-tab grid--{{ section.settings.columns_mobile }}-col-mobile {% endif %}"
        role="list"
        aria-label="{{ 'general.slider.name' | t }}"
      >
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}" 
            class="{% if section.settings.enable_desktop_slider == false %} grid__item{% endif %} {% if section.settings.enable_desktop_slider == true %} swiper-slide{% endif %}"
          >
            {% render 'card-product',
              card_product: product,
              media_aspect_ratio: settings.p_image_ratio,
              image_shape: settings.p_image_shape,
              show_secondary_image: settings.p_show_secondary_image,
              show_vendor: settings.p_show_vendor,
              show_badge: settings.show_badge,
              show_countdown: settings.p_show_countdown,
              show_rating: settings.p_show_rating,
              show_quick_add: settings.p_enable_quick_add,
              quantity_enable: settings.p_quantity_enable,
              enable_product_variants: settings.p_variants_enable,
              show_desc : section.settings.show_desc,
              show_avilibility : section.settings.show_avilibility,
              section_id: section.id
            %}
          </li>
        {%- else -%}
          {%- for i in (1..6) -%}
            <li
              class="{% if section.settings.enable_desktop_slider == false %}grid__item{% endif %} {% if section.settings.enable_desktop_slider == true %} swiper-slide{% endif %}"
            >
              {%- assign placeholder_image = 'product-' | append: forloop.rindex -%}
              {% render 'card-product',
                show_vendor: settings.p_show_vendor,
                placeholder_image: placeholder_image
              %}
            </li>
          {%- endfor -%}
        {%- endfor -%}
      </ul>
      {% if section.settings.arrows and section.settings.enable_desktop_slider %}
        <div class="swiper-buttons">
          <div class="swiper-button-next deal-swiper-button-next">{% render 'icon-caret' %}</div>
          <div class="swiper-button-prev deal-swiper-button-prev">{% render 'icon-caret' %}</div>
        </div>
      {% endif %}
      {% if section.settings.dots and section.settings.enable_desktop_slider -%}
        <div class="swiper-pagination deal-swiper-pagination" id="swiper-pagination-{{section.id}}" style="position: inherit;"></div>
      {% endif %}
    </slider-component>

    {%- if section.settings.show_view_all and more_in_collection -%}
      <div class="center collection__view-all">
        <a
          href="{{ section.settings.collection.url }}"
          class="button deal_collection-button"
          aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: section.settings.collection.title }}"
        >
          {{ 'sections.featured_collection.view_all' | t }}
        </a>
      </div>
    {%- endif -%}
    {% if settings.p_image_shape == 'arch' %}
      {% render 'mask-arch' %}
    {%- endif -%}
  </div>
</div>
</div>

