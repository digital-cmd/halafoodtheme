{{ 'collapsible-content.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .collapsible-content .accordion summary,
  .further-questions{
    background-color: {{ section.settings.bg_color }};
  }
  .content_number, .further-questions .contact-faq-btn{
    background-color: {{ section.settings.number_bg }};
    color: {{ section.settings.number_color }};
  }
  .accordion__title,
  .collapsible-content__heading,
  .feather.feather-plus-circle,
  .feather.feather-minus-circle,
  .further-paragraph{
    color: {{ section.settings.heading_color }};
  }
  .collapsible-description,
  .accordion__content{
    color: {{ section.settings.content_color }};
  }
  .collapsible-content .accordion summary:hover .content_number,
  .further-questions .contact-faq-btn:hover{
    background-color: {{ section.settings.number_hr_bg }};
    color: {{ section.settings.number_hr_color }};
  }
  .accordion summary:hover .feather.feather-plus-circle,
  .accordion summary:hover .accordion__title,
  .accordion summary:hover .feather.feather-minus-circle{
    color: {{ section.settings.hover_color }};
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    margin-top: {{ section.settings.margin-top }}px;
    margin-bottom: {{ section.settings.margin-bottom }}px;
  }
  @media screen and (max-width: 1429px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1429 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1429 }}px;
      margin-top: {{ section.settings.margin-top-1429 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1429 }}px;
    }
  }
  @media screen and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1199 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1199 }}px;
      margin-top: {{ section.settings.margin-top-1199 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1199 }}px;
    }
  }
  @media screen and (max-width: 991px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-991 }}px;
      padding-bottom: {{ section.settings.padding-bottom-991 }}px;
      margin-top: {{ section.settings.margin-top-991 }}px;
      margin-bottom: {{ section.settings.margin-bottom-991 }}px;
    }
  }
  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-767 }}px;
      padding-bottom: {{ section.settings.padding-bottom-767 }}px;
      margin-top: {{ section.settings.margin-top-767 }}px;
      margin-bottom: {{ section.settings.margin-bottom-767 }}px;  
    }
  }
  @media screen and (max-width: 575px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-575 }}px;
      padding-bottom: {{ section.settings.padding-bottom-575 }}px;
      margin-top: {{ section.settings.margin-top-575 }}px;
      margin-bottom: {{ section.settings.margin-bottom-575 }}px;  
    }
  }
{%- endstyle -%}

<div class="collapsible-content-main-section">
  <div class="collapsible-content">
    <div class="collapsible-content__wrapper d-inline-block section-{{ section.id }}-padding section-{{ section.id }}-margin">
      <div class="collapsible-content-wrapper-narrow {% if section.settings.full_width %} full-width {% else %} page-width {% endif %}">
        {% if section.settings.show_topimg %}
          <div class="faq_image_wrapper">
            {% if section.settings.faq_top_img != blank %}
            <div class="media media--transparent ratio" style="--ratio-percent: 30%">
              <img src="{{ section.settings.faq_top_img | img_url: 'master' }}" alt="product-image" class="w-100"
                loading="lazy">
            </div>
            {% else %}
            <div class="media media--transparent ratio" style="--ratio-percent: 30%">
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
            </div>
            {% endif %}
          </div>
        {% endif %}
        <div class="grid grid--1-col grid--2-col-tablet collapsible-content__grid{% if section.settings.desktop_layout == 'image_second' %} collapsible-content__grid--reverse{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {%- if section.settings.image != blank -%}
            <div class="grid__item collapsible-content__grid-item">
              <div
                class="collapsible-content__media collapsible-content__media--{{ section.settings.image_ratio }} media global-media-settings gradient"
                {% if section.settings.image_ratio == 'adapt' %}
                  style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
                {% endif %}
              >
                {%- liquid
                  assign padding_multiplier = 1
                  assign desktop_tablet_padding = 100 | times: padding_multiplier | append: 'px'
                  assign mobile_padding = 30 | times: padding_multiplier | append: 'px'
                -%}
                {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - {{ desktop_tablet_padding }}) / 2),
                  (min-width: 750px) calc((100vw - {{ desktop_tablet_padding }}) / 2),
                  calc(100vw - {{ mobile_padding }})
                {%- endcapture -%}
                {{
                  section.settings.image
                  | image_url: width: 3200
                  | image_tag:
                    sizes: sizes,
                    widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200'
                }}
              </div>
            </div>
          {% endif %}
          <div class="grid__item">
            {%- for block in section.blocks -%}
              <div
                class="accordion"
                {{ block.shopify_attributes }}
              >
                <details
                  id="Details-{{ block.id }}-{{ section.id }}"
                  {% if section.settings.open_first_collapsible_row and forloop.first %}
                    open
                  {% endif %}
                >
                  <summary id="Summary-{{ block.id }}-{{ section.id }}">
                    <div class="content_number">{{ block.settings.content_number }}</div>
                    <div class="accordion__title inline-richtext h3">
                      {{ block.settings.heading }}
                    </div>
                    {% render 'icon-collapse-plus' %}
                    {% render 'icon-collapse-minus' %}
                  </summary>
                  <div
                    class="accordion__content rte"
                    id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                    role="region"
                    aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                  >
                    {{ block.settings.row_content }}
                  </div>
                </details>
              </div>
            {%- endfor -%}
          </div>
        </div>
        {% if section.settings.further_text != blank or section.settings.contact_btn_text != blank %}
          <div class="further-questions" style="text-align: {{ section.settings.main_title_alignment }};">
            <p class="further-paragraph">{{ section.settings.further_text }}</p>
            <a {% if section.settings.contact_btn_link %} href="{{ section.settings.contact_btn_link }}" {% else %} role="link" aria-disabled="true" {% endif %} class="contact-faq-btn theme_buttons button">{{ section.settings.contact_btn_text }}</a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

