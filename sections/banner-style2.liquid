{% style %}
  {%- for block in section.blocks -%}
    {%- if block.type == "single-banner" -%}
     .banner-style4 .first-banner-section .banner-{{ block.id }} .banner_btn_t{
        background: {{ block.settings.theme_btn_bg }};
        color: {{ block.settings.theme_btn_text }};
      }
      .banner-style4 .first-banner-section .banner-{{ block.id }} .banner_btn_t:hover{
        background: {{ block.settings.theme_btn_hr_bg }};
        color: {{ block.settings.theme_btn_hr_text }};
      }
      .banner-style4 .banner-{{ block.id }} .theme_main_heading{
        color: {{ block.settings.heading_color }};
      }
      .banner-style4 .banner-{{ block.id }} .theme_main_subheading{
        color: {{ block.settings.subheading_color }};
      }
    {% endif %}
  {% endfor %}
  {%- for block in section.blocks -%}
    {%- if block.type == "multi-banner" -%}
      .banner-{{ block.id }} .right-inner-banner .banner_btn_t{
        background: {{ block.settings.theme_btn_bg1 }};
        color: {{ block.settings.theme_btn_text1 }};
      }
      .banner-{{ block.id }} .right-inner-banner .banner_btn_t:hover{
        background: {{ block.settings.theme_btn_hr_bg1 }};
        color: {{ block.settings.theme_btn_hr_text1 }};
      }
     .banner-{{ block.id }} .right-inner-banner .banner_btn_tt{
        background: {{ block.settings.theme_btn_bg2 }};
        color: {{ block.settings.theme_btn_text2 }};
      }
      .banner-{{ block.id }} .right-inner-banner .banner_btn_tt:hover{
        background: {{ block.settings.theme_btn_hr_bg2 }};
        color: {{ block.settings.theme_btn_hr_text2 }};
      }
      .banner-{{ block.id }} .right-inner-banner .theme_main_heading{
        color: {{ block.settings.heading_color1 }};
      }
      .banner-{{ block.id }} .right-inner-banner .theme_main_subheading{
        color: {{ block.settings.subheading_color1 }};
      }
      .banner-{{ block.id }} .right-inner-banner .second-bottom-heading{
        color: {{ block.settings.heading_color2 }};
      }
      .banner-{{ block.id }} .right-inner-banner .second-bottom-subheading{
        color: {{ block.settings.subheading_color2 }};
      }
    {% endif %}
  {% endfor %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    margin-top: {{ section.settings.margin-top }}px;
    margin-bottom: {{ section.settings.margin-bottom }}px;
  }
