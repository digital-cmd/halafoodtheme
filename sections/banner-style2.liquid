<div class="banner-style4 section-{{ section.id }}-padding {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="banner-with-text4 {{ section.settings.section_width }}">
    <div class="banner-section-wrapper">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
        {%- when 'single-banner' -%}
          <div class="first-banner-section col-lg-{{ block.settings.block-width }}">
            <div class="banner-{{ block.id }} new-banner-wrapper">
              <div class="banner-image">
                <a {% if block.settings.first-banner-btn-url %} href="{{ block.settings.first-banner-btn-url }}" {%
                    else %} role="link" aria-disabled="true" {% endif %} >
                  {% if block.settings.first-banner-image != blank %}
                    <div class="media media--transparent ratio" style="--ratio-percent: {{ block.settings.image-ratio }}%">
                      {{ block.settings.first-banner-image | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                    </div>
                  {% else %}
                  <div class="media media--transparent ratio" style="--ratio-percent: {{ block.settings.image-ratio }}%">
                    {{ 'collection-4' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                  </div>
                  {% endif %}
                <div class="banner-text banner-text--{{ block.settings.text_alignment1 }} banner-block--{{ block.settings.text_block_alignment1 }}">
                  {% if block.settings.first-banner-subheading-text != blank %}
                    <div class="theme_main_subheading">{{ block.settings.first-banner-subheading-text }}</div>
                  {% endif %}
                  {% if block.settings.first-banner-heading-text != blank %}
                    <div class="theme_main_heading h2">{{ block.settings.first-banner-heading-text }}</div>
                  {% endif %}
                  <div class="theme_buttons button banner_btn_t">{{
                    block.settings.first-banner-btn-text }}</div>
                </div>
                </a>
              </div>
            </div>
          </div>
          {%- when 'multi-banner' -%}
            <div class="banner-{{ block.id }} second-banner-section col-lg-{{ block.settings.block-width2 }}">

            <div class="right-inner-banner">
              <div class="inner-banner-wrapper">
              <div class="new-banner-wrapper inner-left-banner">
                <div class="banner-image">
                  <a {% if block.settings.second-banner-btn-url2 %} href="{{ block.settings.second-banner-btn-url2 }}" {%
                      else %} role="link" aria-disabled="true" {% endif %}>
                    {% if block.settings.second-banner-image2 != blank %}
                    <div class="media media--transparent ratio" style="--ratio-percent: {{ block.settings.image-ratio3 }}%">
                      {{ block.settings.second-banner-image2 | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                    </div>
                    {% else %}
                    <div class="media media--transparent ratio" style="--ratio-percent: {{ block.settings.image-ratio3 }}%">
                      {{ 'collection-4' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                    </div>
                    {% endif %}
                    <div class="banner-text banner-text--{{ block.settings.text_alignment2 }} banner-block--{{ block.settings.text_block_alignment2 }}">
                      {% if block.settings.second-banner-subheading-text2 != blank %}
                      <div class="theme_main_subheading">{{ block.settings.second-banner-subheading-text2 }}</div>
                      {% endif %}
                      {% if block.settings.second-banner-heading-text2 != blank %}
                      <div class="theme_main_heading h2">{{ block.settings.second-banner-heading-text2 }}</div>
                      {% endif %}
                      <div class="theme_buttons button banner_btn_t">{{
                        block.settings.second-banner-btn-text2 }}</div>
                    </div>
                  </a>
                </div>
              </div>



              <div class="new-banner-wrapper inner-right-banner">
                <div class="banner-image">
                  <a {% if block.settings.second-banner-btn-url3 %} href="{{ block.settings.second-banner-btn-url3 }}" {%
                      else %} role="link" aria-disabled="true" {% endif %}>
                    {% if block.settings.second-banner-image3 != blank %}
                    <div class="media media--transparent ratio" style="--ratio-percent: {{ block.settings.image-ratio4 }}%">
                      {{ block.settings.second-banner-image3 | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                    </div>
                    {% else %}
                    <div class="media media--transparent ratio" style="--ratio-percent: {{ block.settings.image-ratio4 }}%">
                      {{ 'collection-4' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                    </div>
                    {% endif %}
                    <div class="banner-text banner-text--{{ block.settings.text_alignment3 }} banner-block--{{ block.settings.text_block_alignment3 }}">
                      {% if block.settings.second-banner-subheading-text3 != blank %}
                      <div class="theme_main_subheading second-bottom-subheading">{{ block.settings.second-banner-subheading-text3 }}</div>
                      {% endif %}
                      {% if block.settings.second-banner-heading-text3 != blank %}
