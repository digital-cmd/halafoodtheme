{{ 'category-collection-style1.css' | asset_url | stylesheet_tag }}
<div class="{{ section.settings.section_width }}">
<div class="category-collection-style1 section-{{ section.id }}-padding main-collection-list-item {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} {% if section.settings.show_pattern %}pattern-image{% endif %}">
  <div class="page-width">
    <div class="main-collection-item main-collection-item--{{ section.settings.text_alignment }}">
      {% if section.settings.heading-img != blank or section.settings.main_subheading != blank or section.settings.main_heading != blank or section.settings.main_paragraph != blank %}
        <div class="collection_title_wrap title_bottom_margin">
           {% if section.settings.heading-img != blank %}
              <div class="heading-img w-100 {{ section.settings.text_alignment }}">
                <img src="{{ section.settings.heading-img | img_url: 'master' }}" alt="slider-img" class="w-100" loading="eager">
              </div>
            {% endif %}
            {% if section.settings.main_subheading != blank %}
              <div class="theme_main_subheading">{{ section.settings.main_subheading }}</div>
            {% endif %}
            {% if section.settings.main_heading != blank %}
              <div class="theme_main_heading h2">{{ section.settings.main_heading }}</div>
            {% endif %}
            {% if section.settings.main_paragraph != blank %}
              <p class="theme_main_description">{{ section.settings.main_paragraph }}</p>
            {% endif %}
        </div>
      {% endif %}
      <div class="main-collection-list-wrapper swiper-container {{ section.settings.category_style }}"
        data-desktop="{{ section.settings.collection-desktop }}" data-largetablet="{{ section.settings.collection-large-tablet }}" data-tablet="{{ section.settings.collection-tablet }}" 
        data-mobile="{{ section.settings.collection-mobile }}" data-autoplay="{{ section.settings.autoplay-enable }}"
        data-speed="{{ section.settings.speed }}" data-loop="{{ section.settings.loop }}" data-slider="{{ section.settings.category_style }}">
        <div
          class="collection-list swiper-wrapper">
          {% for block in section.blocks %}
          {% if block.type == 'collection' %}
          {%- assign featured_collection = collections[block.settings.collection] -%}
          {%- assign featured_image = block.settings.image -%}
          {%- assign collectionTitle = featured_collection.title | default: 'Collection' -%}
          <div class="main-collection-list swiper-slide" {{ block.shopify_attributes }}>
            <div class="collection-card__image {{ section.settings.collection_position }}">
                    <a {% if featured_collection.url==blank %} role="link" aria-disabled="true" {% else %}
                      href="{{ featured_collection.url }}" {% endif %} aria-label=" {{ block.settings.title1 }}" class="category-img">
                      <div class="category_img {{ section.settings.category_img }}">
                          {%- if featured_image != blank -%}
                            <div class="media media--transparent ratio" style="--ratio-percent: {{ block.settings.image-ratio }}%">
                              {{ featured_image | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                            </div>
                          {% else %}
                            <div class="media media--transparent ratio" style="--ratio-percent: {{ block.settings.image-ratio }}%">
                              {%- capture current -%}{%- cycle 1, 2, 3, 4, 5, 6 -%}{%- endcapture -%}
                              {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                            </div>
                      {%- endif -%}
                      </div>
                    </a>
                    <a {% if featured_collection.url==blank %} role="link" aria-disabled="true" {% else %}
                      href="{{ featured_collection.url }}" {% endif %} class="collection-name" aria-label=" {{ block.settings.title1 }}">
                       <div class="h3">
                          {% if block.settings.title1 != blank %}
                            {{ block.settings.title1 }}
                            {% else %}
                            {{ collectionTitle }}
                          {% endif %}
                          </div>
                    </a>
                    <a {% if featured_collection.url==blank %} role="link" aria-disabled="true" {% else %}
                      href="{{ featured_collection.url }}" {% endif %} class="collection-button" aria-label="{{ block.settings.title1 }}">
                        <div class="collection-product-count">{{ featured_collection.products_count | default: 0 }} <span style="margin-left:2px;">{{ 'customer.order.product' | t }}</span></div>
                    </a>
              
            </div>
          </div>
          {% endif %}
          {% endfor %}
        </div>
        {% if section.settings.arrows %}
        <div class="swiper-buttons">
          <div class="content-buttons">
            <div class="swiper-button-next category-swiper-button-next">{% render 'icon-caret' %}</div>
            <div class="swiper-button-prev category-swiper-button-prev">{% render 'icon-caret' %}</div>
          </div>
        </div>
        {% endif %}
        {% if section.settings.dots -%}
        <div class="swiper-pagination category-swiper-pagination" id="swiper-pagination-{{section.id}}" style="position: inherit;"></div>
        {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% style %}
  {% if section.settings.collection_text_bg != 'rgba(0,0,0,0)' %}
    .category-collection-style1 .collection-card__image{
      padding: 20px;
      transition: all .5s ease;
      box-shadow: 0px 0px 10px #9d9d9d1f;
    }
    .category-collection-style1 .modern .collection-card__image{
      padding: 30px;
      box-shadow: 0px 0px 10px #9d9d9d1f;
    }
    @media screen and (max-width: 1099px){
     .category-collection-style1 .collection-card__image{
        padding: 10px;
      }
      .category-collection-style1 .modern .collection-card__image{
        padding: 20px;
      }
    }
      @media screen and (max-width: 575px){
      .category-collection-style1 .modern .collection-card__image {
          padding: 10px;
      }
    }
  {% endif %}
  
  {% if section.settings.collection_text_bg == 'rgba(0,0,0,0)' %}
    .category-collection-style1 .collection-card__image:hover{
      background: transparent !important;
    }
    .category-collection-style1 .collection-card__image:before{
      background: transparent !important;
    }
  {% endif %}
  .category-collection-style1.pattern-image:after {
    content: "";
    background: {{ section.settings.pattern_bg }};
    -webkit-mask-image: url({% if settings.pattern_img != blank %} {{ settings.pattern_img | img_url: 'master' }} {% endif %});
  }
  .category-collection-style1.pattern-image:before {
    content: "";
    background: {{ section.settings.pattern_bg }};
    -webkit-mask-image: url({% if settings.pattern_img != blank %} {{ settings.pattern_img | img_url: 'master' }} {% endif %});
  }
  .category-collection-style1 .heading-img.center{
    margin: 0 auto;
  }
  .category-collection-style1 .heading-img.caret{
    margin: 0 0 0 auto;
  }
  .category-collection-style1 .theme_main_heading {
    color: {{ section.settings.theme_heading_color }};
  }
  .category-collection-style1 .theme_main_subheading {
    color: {{ section.settings.theme_subheading_color }};
  }
  .category-collection-style1 .theme_main_description{
    color: {{ section.settings.content_color }};
  }
  .category-collection-style1 .swiper-button-next,
  .category-collection-style1 .swiper-button-prev{
    background: {{ settings.button_bg }}; 
    color: {{ settings.button_text }};
  }
  .category-collection-style1 .swiper-button-next:hover,
  .category-collection-style1 .swiper-button-prev:hover{
    background: {{ settings.button_hr_bg }}; 
    color: {{ settings.button_hr_text }};
  }
  .category-collection-style1 .collection-card__image{
    background-color: {{ section.settings.collection_text_bg }};
  }
  .category-collection-style1 .collection-card__image:before{
    background-color: {{ section.settings.collection_text_hr_bg }};
  }
  .category-collection-style1 .collection-card__image .h3{
    color: {{ section.settings.collection-name-color }};
  }
  .category-collection-style1 .collection-card__image:hover .h3{
    color: {{ section.settings.collection-name-color-hover }};
  }
  .category-collection-style1 .collection-product-count{
    background:{{ section.settings.theme_btn_bg }};
    color:{{ section.settings.theme_btn_text }};
  }
  .category-collection-style1 .collection-card__image:hover .collection-product-count{
    background:{{ section.settings.theme_btn_hr_bg }};
    color:{{ section.settings.theme_btn_hr_text }};
  }
  .category-collection-style1.main-collection-list-item .swiper-pagination-bullet{
    background: {{ settings.theme_dots }};
  }
  .category-collection-style1.main-collection-list-item .swiper-pagination-bullet-active{
    background: {{ settings.theme_dots_active }};
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    margin-top: {{ section.settings.margin-top }}px;
    margin-bottom: {{ section.settings.margin-bottom }}px;
    background-color: {{ section.settings.bg_color }};
  }
  @media screen and (max-width: 1429px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1429 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1429 }}px;
