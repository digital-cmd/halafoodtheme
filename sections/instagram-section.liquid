<div class="{{ section.settings.section_width }} ">
<div class="main-instagram-post-section section-{{ section.id }}-padding {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="page-width">
    {% if section.settings.heading-img != blank or section.settings.section_subtitle != blank or section.settings.main_heading != blank or section.settings.section_description != blank %}
      <div class="instagram-main-heading title_bottom_margin">
        {% if section.settings.heading-img != blank %}
          <div class="heading-img w-100 {{ section.settings.main_tab_title_alignment }}">
            <img src="{{ section.settings.heading-img | img_url: 'master' }}" alt="slider-img" class="w-100" loading="eager">
          </div>
        {% endif %}
        {% if section.settings.section_subtitle != blank %}
          <div class="tab_subheading theme_main_subheading">
          {{ section.settings.section_subtitle }}
        </div>
        {% endif %}
        {% if section.settings.main_heading != blank %}
          <div class="theme_main_heading h2">{{ section.settings.main_heading }}</div>
        {% endif %}
        {% if section.settings.section_description != blank %}
          <p class="collection__description theme_main_description">
            {{ section.settings.section_description }}
          </p>
        {% endif %}
      </div>
    {% endif %}
    <div class="{% if section.settings.enble-slider == true %} main-instagram-post-section-wrapper swiper-container{% endif %} 
      desktop--{{ section.settings.columns_desktop }}-column large_tablet--{{ section.settings.columns_large_tablet }}-column tablet--{{ section.settings.columns_tablet }}-column mobile--{{ section.settings.columns_mobile }}-column"
      data-enable="{{ section.settings.enble-slider }}"
      data-desktop="{{ section.settings.columns_desktop }}" data-largetablet="{{ section.settings.columns_large_tablet }}"
      data-tablet="{{ section.settings.columns_tablet }}" data-mobile="{{ section.settings.columns_mobile }}" data-autoplay="{{ section.settings.autoplay-enable }}"
      data-speed="{{ section.settings.speed }}" data-loop="{{ section.settings.loop }}">
      <div class="{% if section.settings.enble-slider == true %}  swiper-wrapper {% else %} instagram-main-wrapper {% endif %}">
        {% for block in section.blocks %}
        <div class="{% if section.settings.enble-slider == true %} swiper-slide {% else %} instagram-image-item {% endif %}">
           <a {% if block.settings.insta_link == blank %} role="link" aria-disabled="true" {% else %} href="{{ block.settings.insta_link }}"{% endif %} aria-label="Instagram-{{ block.id }}">
             <div class="instagram_img">
                {% if block.settings.instagram-post-img != blank %}
                  <div class="media media--transparent ratio" style="--ratio-percent: 100%">
                    {{ block.settings.instagram-post-img | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                  </div>
                  {% else %}
                  <div class="media media--transparent ratio" style="--ratio-percent: 100%">
