            {%- comment -%} Display filtered predictive search collections {%- endcomment -%}
            {%- for collection in predictive_search.resources.collections -%}
              {%- unless collection.handle == 'free-gifts-collection' -%}
                {%- comment -%} Add collection display if needed {%- endcomment -%}
              {%- endunless -%}
            {%- endfor -%}
