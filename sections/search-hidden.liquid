{%- liquid
   assign results_count = search.results_count
   assign collection = collections[settings.search_prs_suggest]
   assign limit = 5 
   assign show_search_suggest = settings.show_search_suggest
   assign on_sale_txt = 'products.product.on_sale' | t
   assign save_js = 'products.product.save_js' | t: saved_amount: 'saved_amount'
   if shop.types.size < 3
    assign shop_types = shop.types | join: ' ' | remove: ' '
   else
    assign shop_types = 'type_the4'
   endif
   if settings.within_cat and collection
      assign isHasCollection = true
   else  
      assign isHasCollection = false
   endif
   assign placeholder_img = settings.placeholder_img
   assign price_varies_style = settings.price_varies_style
   
   assign search_terms = search.terms
   assign key_terms = search_terms
   if search_terms contains 'product_type:'
     assign arr_terms = search_terms | remove: 'product_type:' | replace_first: ' AND', ' AND ' | replace_first: '  ', ' ' | split: ' AND '
     assign product_type = arr_terms[0] | strip
     assign search_terms = arr_terms[1] | strip
     if search_terms == blank
       assign key_terms = key_terms | remove: ' AND '
   	   assign search_terms = product_type
     endif
   endif
 -%}
{%- comment -%} Adjust results count to exclude gift items {%- endcomment -%}
{%- if search.performed -%}
  {%- liquid
    assign gift_collection = collections['free-gifts-collection']
    assign gift_items_to_exclude = 0
    
    if gift_collection and gift_collection.products.size > 0
      assign gift_product_ids = gift_collection.products | map: 'id'
      for result in search.results
        if result.object_type == 'product' and gift_product_ids contains result.id
          assign gift_items_to_exclude = gift_items_to_exclude | plus: 1
        elsif result.object_type == 'collection' and result.handle == 'free-gifts-collection'
          assign gift_items_to_exclude = gift_items_to_exclude | plus: 1
        endif
      endfor
    endif
    
    assign results_count = results_count | minus: gift_items_to_exclude
  -%}
{%- endif -%}
{%- if request.design_mode -%}
  <link rel="stylesheet" href="{{ 'search-hidden.css' | asset_url }}" media="all">
{%- endif -%}
{%- if settings.predictive_search and predictive_search -%}
  {%- liquid
   assign search_terms = predictive_search.terms
   assign key_terms = search_terms
   if search_terms contains 'product_type:'
     assign arr_terms = search_terms | remove: 'product_type:' | replace_first: ' AND', ' AND ' | replace_first: '  ', ' ' | split: ' AND '
     assign product_type = arr_terms[0] | strip
     assign search_terms = arr_terms[1] | strip
     if search_terms == blank
       assign key_terms = key_terms | remove: ' AND '
       assign search_terms = product_type
     endif
   endif
 -%}

  {%- if predictive_search != blank -%}
  {%- comment -%} Filter out gift collection from predictive search collections {%- endcomment -%}
  {%- assign filtered_collections = blank -%}
  {%- assign filtered_collections_array = blank -%}
  {%- for collection in predictive_search.resources.collections -%}
    {%- unless collection.handle == 'free-gifts-collection' -%}
      {%- if filtered_collections_array == blank -%}
        {%- assign filtered_collections_array = collection.id -%}
      {%- else -%}
        {%- assign filtered_collections_array = filtered_collections_array | append: ',' | append: collection.id -%}
      {%- endif -%}
    {%- endunless -%}
  {%- endfor -%}
  {%- assign filtered_collections_count = filtered_collections_array | split: ',' | size -%}
  {%- if filtered_collections_array == blank -%}{%- assign filtered_collections_count = 0 -%}{%- endif -%}
  
  {%- comment -%} Filter out gift products from predictive search products {%- endcomment -%}
  {%- liquid
    assign gift_collection = collections['free-gifts-collection']
    assign gift_product_ids = gift_collection.products | map: 'id'
    assign filtered_products_array = blank
    
    for product in predictive_search.resources.products
      unless gift_product_ids contains product.id
        if filtered_products_array == blank
          assign filtered_products_array = product.id
        else
          assign filtered_products_array = filtered_products_array | append: ',' | append: product.id
        endif
      endunless
    endfor
    
    assign filtered_products_count = filtered_products_array | split: ',' | size
    if filtered_products_array == blank
      assign filtered_products_count = 0
    endif
  -%}
  
  {%- comment -%} Update results count to exclude gift items {%- endcomment -%}
  {%- assign results_count = predictive_search.resources.queries.size
    | plus: filtered_products_count
    | plus: filtered_collections_count
    | plus: predictive_search.resources.pages.size
    | plus: predictive_search.resources.articles.size
  -%}
{%- endif -%}
  
