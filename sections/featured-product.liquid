                class="product-media-container global-media-settings{% if section.settings.constrain_to_viewport %} constrain-height{% endif %}"
                style="--ratio: 1.0; --preview-ratio: 1.0;"
              >
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
              </div>
            </div>
          {%- endif -%}
