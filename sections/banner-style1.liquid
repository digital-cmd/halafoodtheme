{{ 'banner-style1.css' | asset_url | stylesheet_tag }}

<div class="banner-{{ section.id }} second-image-with-text-banner-section d-inline-block section-{{ section.id }}-padding {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="second-image-banner-video-section-wrapper {{ section.settings.section_width }}">
    <div class="second-banner-with-text {{ section.settings.spacing_banner }}">
      <div class="second-image-with-text-banner-section-wrapper">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
          {%- when 'banner' -%}
            <div class="second-first-banner-section col-lg-{{ block.settings.block-width }}">
              <div class="second-new-banner-wrapper">
                <div class="banner-{{ block.id }} second-banner-image">
                 <a {% if block.settings.first-banner-btn-url %} href="{{ block.settings.first-banner-btn-url }}" {% else %} role="link" aria-disabled="true" {% endif %}>
                    <div class="banner-hover-img">
                      {% if block.settings.first-banner-image != blank %}
                      <div class="media media--transparent ratio" style="--ratio-percent: {{ block.settings.image-ratio }}%">
                        {{ block.settings.first-banner-image | image_url: width: 1920 | image_tag : loading: 'lazy', class: 'w-100' }}
                      </div>
                      {% else %}
                      <div class="media media--transparent ratio" style="--ratio-percent: {{ block.settings.image-ratio }}%">
                        {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                      </div>
                      {% endif %}
                    </div>
                    <div class="second-banner-text second-banner-text--{{ block.settings.text_alignment }} second-banner-block--{{ block.settings.text_block_alignment }}">
                      {% if block.settings.first-banner-subheading-text != blank %}
                        <div class="banner-{{ block.id }} theme_main_subheading">{{ block.settings.first-banner-subheading-text }}</div>
                      {% endif %}
                      {% if block.settings.first-banner-heading-text != blank %}
                        <div class="banner-{{ block.id }} theme_main_heading h2">{{ block.settings.first-banner-heading-text }}</div>
                      {% endif %}
                      <div class="button theme_buttons second-banner_btn_t" aria-label="{{ block.settings.first-banner-btn-text }}">{{ block.settings.first-banner-btn-text }}</div>
                    </div>
                  </a>
                </div>
              </div>
            </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% style %}
  {%- for block in section.blocks -%}
    {%- case block.type -%}
    {%- when 'banner' -%}
      .banner-{{ section.id }} .second-banner-with-text .banner-{{ block.id }} .theme_main_heading {
        color: {{ block.settings.heading_color }};
      }
      .banner-{{ section.id }} .second-banner-with-text .banner-{{ block.id }} .theme_main_subheading{
        color: {{ block.settings.subheading_color }};
      }
      .banner-{{ section.id }} .second-image-with-text-banner-section-wrapper .banner-{{ block.id }} .second-banner_btn_t{
        background-color: {{ block.settings.button_bg }};
        color: {{ block.settings.button_text }};
      }
      .banner-{{ section.id }} .second-image-with-text-banner-section-wrapper .banner-{{ block.id }} .second-banner_btn_t:hover {
        background-color: {{ block.settings.button_hr_bg }};
        color: {{ block.settings.button_hr_text }};
      }
    {% endcase %}
  {% endfor %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    margin-top: {{ section.settings.margin-top }}px;
    margin-bottom: {{ section.settings.margin-bottom }}px;
  }
  @media screen and (max-width: 1429px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1429 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1429 }}px;
      margin-top: {{ section.settings.margin-top-1429 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1429 }}px;
    }
  }
  @media screen and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-1199 }}px;
      padding-bottom: {{ section.settings.padding-bottom-1199 }}px;
      margin-top: {{ section.settings.margin-top-1199 }}px;
      margin-bottom: {{ section.settings.margin-bottom-1199 }}px;
    }
  }
  @media screen and (max-width: 991px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-991 }}px;
      padding-bottom: {{ section.settings.padding-bottom-991 }}px;
      margin-top: {{ section.settings.margin-top-991 }}px;
      margin-bottom: {{ section.settings.margin-bottom-991 }}px;
    }
  }
  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-767 }}px;
      padding-bottom: {{ section.settings.padding-bottom-767 }}px;
      margin-top: {{ section.settings.margin-top-767 }}px;
      margin-bottom: {{ section.settings.margin-bottom-767 }}px;  
    }
  }
  @media screen and (max-width: 575px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-top-575 }}px;
      padding-bottom: {{ section.settings.padding-bottom-575 }}px;
      margin-top: {{ section.settings.margin-top-575 }}px;
      margin-bottom: {{ section.settings.margin-bottom-575 }}px;  
    }
  }
{% endstyle %}
  
